<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <!-- 메인 컨텐츠 영역 -->
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- ✅ 공통 헤더 -->
            <include
                android:id="@+id/header"
                layout="@layout/inc_header_jeu" />

            <!-- ✅ 스크롤 본문 -->
            <androidx.core.widget.NestedScrollView
                android:id="@+id/scroll"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:fillViewport="true"
                android:layout_weight="1"
                android:background="@color/brand_bg"
                android:clipToPadding="false">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- 여정 상세 -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="여정 상세"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:layout_marginBottom="8dp"
                        android:textColor="#000000"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="가는 편"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="4dp"/>

                    <!-- 가는 편 카드 -->
                    <include
                        android:id="@+id/includeOutbound"
                        layout="@layout/item_flight_summary" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="오는 편"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="4dp"/>

                    <!-- 오는 편 카드 -->
                    <include
                        android:id="@+id/includeInbound"
                        layout="@layout/item_flight_summary" />

                    <!-- 운임 상세 -->
                    <TextView
                        android:id="@+id/tvFareTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="항목별 운임 상세"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="8dp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/divider"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingTop="12dp"
                        android:paddingBottom="8dp">

                        <!-- 항공운임 -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="항공운임" />

                            <TextView
                                android:id="@+id/tvFareBase"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0원" />
                        </LinearLayout>

                        <!-- 유류할증료 -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="6dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="유류할증료" />

                            <TextView
                                android:id="@+id/tvFareFuel"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0원" />
                        </LinearLayout>

                        <!-- 공항시설 사용료 -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="6dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="공항시설 사용료" />

                            <TextView
                                android:id="@+id/tvFareFacility"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0원" />
                        </LinearLayout>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/divider" />

                    <!-- 예상 결제금액 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingVertical="16dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="예상 결제금액"
                            android:textStyle="bold"
                            android:textSize="18sp"/>

                        <TextView
                            android:id="@+id/tvTotalPrice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0원"
                            android:textStyle="bold"
                            android:textSize="20sp" />
                    </LinearLayout>

                    <!-- 약관 동의 -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="약관 및 규정 동의"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="4dp"/>

                    <CheckBox
                        android:id="@+id/cbAll"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="전체 동의" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginVertical="8dp"
                        android:background="@color/divider"/>

                    <!-- 하위 체크 박스들 -->
                    <CheckBox
                        android:id="@+id/cbRule"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="항공권 운임 규정 동의" />

                    <CheckBox
                        android:id="@+id/cbDomestic"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="국내선 여객운송 약관 동의" />

                    <CheckBox
                        android:id="@+id/cbProhibited"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="항공기 반입금지 위험물 확인" />

                    <CheckBox
                        android:id="@+id/cbAddon"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="부가서비스 구매·환불 규정 동의" />

                    <CheckBox
                        android:id="@+id/cbThird"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="제 3자 정보 제공 동의" />

                    <CheckBox
                        android:id="@+id/cbHazard"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="위험물 안내 규정 동의" />

                    <!-- 여유 공간 -->
                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="80dp" />
                </LinearLayout>
            </androidx.core.widget.NestedScrollView>

            <!-- ✅ 하단 고정 바 -->
            <LinearLayout
                android:id="@+id/bottomBar"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:orientation="vertical"
                android:background="#EEEEEE"
                android:paddingHorizontal="16dp"
                android:paddingTop="8dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnNext"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="다음"
                    android:enabled="false" />
            </LinearLayout>
        </LinearLayout>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <!-- ✅ 드로어 메뉴 -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigationView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        app:headerLayout="@layout/nav_header_jeu"
        app:menu="@menu/drawer_menu_jeu"
        app:itemBackground="@drawable/nav_item_bg_jeu"/>
</androidx.drawerlayout.widget.DrawerLayout>
