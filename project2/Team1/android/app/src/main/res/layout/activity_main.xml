<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBg_je"
        android:orientation="vertical"> <!-- 헤더 -->
        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@color/colorBg_je"
            android:elevation="6dp"
            app:contentInsetStartWithNavigation="0dp"
            app:menu="@menu/main_toolbar_menu"
            app:title="">

            <ImageView
                android:id="@+id/imgLogo"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="12dp"
                android:adjustViewBounds="true"
                android:background="@android:color/transparent"
                android:contentDescription="@string/app_name"
                app:srcCompat="@drawable/jeu_logo" />
        </com.google.android.material.appbar.MaterialToolbar> <!-- 스크롤 영역 -->
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"> <!-- 사진 슬라이더 -->
                <FrameLayout
                    android:id="@+id/sliderContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.viewpager2.widget.ViewPager2
                        android:id="@+id/viewPager"
                        android:layout_width="match_parent"
                        android:layout_height="280dp" /> <!-- 좌/우 버튼 --> <ImageButton
                    android:id="@+id/btnPrev"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center_vertical|start"
                    android:layout_marginStart="8dp"
                    android:alpha="0.45"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="@string/prev_image"
                    app:srcCompat="@drawable/ic_chevron_left"
                    app:tint="@color/colorPrimary_je" />

                    <ImageButton
                        android:id="@+id/btnNext"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_gravity="center_vertical|end"
                        android:layout_marginEnd="8dp"
                        android:alpha="0.45"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:contentDescription="@string/next_image"
                        app:srcCompat="@drawable/ic_chevron_right"
                        app:tint="@color/colorPrimary_je" /> <!-- 인디케이터 -->
                    <LinearLayout
                        android:id="@+id/dotsContainer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|center_horizontal"
                        android:layout_marginBottom="8dp"
                        android:orientation="horizontal" />
                </FrameLayout> <!-- 2×2 메뉴 카드 -->
                <androidx.gridlayout.widget.GridLayout
                    android:id="@+id/gridMenu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorBg_je"
                    android:padding="20dp"
                    app:columnCount="2"
                    app:rowOrderPreserved="false"> <!-- Flights -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cardFlight"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/menu_card_height"
                        android:layout_margin="@dimen/menu_item_margin"
                        app:cardBackgroundColor="@color/ink_300"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="4dp"
                        app:layout_columnWeight="1">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:id="@+id/txtFlights"
                                style="@style/Jeu.MenuCardLabel.SCD7"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start|top"
                                android:layout_margin="@dimen/menu_item_margin"
                                android:text="Flights" />

                            <ImageView
                                android:layout_width="@dimen/menu_icon_size"
                                android:layout_height="@dimen/menu_icon_size"
                                android:layout_gravity="end|bottom"
                                android:layout_margin="@dimen/menu_item_margin"
                                app:srcCompat="@drawable/ic_flight_takeoff"
                                app:tint="@color/colorPrimary_je" />
                        </FrameLayout>
                    </com.google.android.material.card.MaterialCardView> <!-- Hotels -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cardHotel"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/menu_card_height"
                        android:layout_margin="@dimen/menu_item_margin"
                        app:cardBackgroundColor="@color/jeju_tint"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="4dp"
                        app:layout_columnWeight="1">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:id="@+id/txtHotels"
                                style="@style/Jeu.MenuCardLabel.SCD7"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start|top"
                                android:layout_margin="@dimen/menu_item_margin"
                                android:text="Hotels" />

                            <ImageView
                                android:layout_width="@dimen/menu_icon_size"
                                android:layout_height="@dimen/menu_icon_size"
                                android:layout_gravity="end|bottom"
                                android:layout_margin="@dimen/menu_item_margin"
                                app:srcCompat="@drawable/ic_hotel"
                                app:tint="@color/colorPrimary_je" />
                        </FrameLayout>
                    </com.google.android.material.card.MaterialCardView> <!-- Forum -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cardBoard"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/menu_card_height"
                        android:layout_margin="@dimen/menu_item_margin"
                        app:cardBackgroundColor="@color/jeju_tint"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="4dp"
                        app:layout_columnWeight="1">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:id="@+id/txtForum"
                                style="@style/Jeu.MenuCardLabel.SCD7"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start|top"
                                android:layout_margin="@dimen/menu_item_margin"
                                android:text="Post" />

                            <ImageView
                                android:layout_width="@dimen/menu_icon_size"
                                android:layout_height="@dimen/menu_icon_size"
                                android:layout_gravity="end|bottom"
                                android:layout_margin="@dimen/menu_item_margin"
                                app:srcCompat="@drawable/ic_forum"
                                app:tint="@color/colorPrimary_je" />
                        </FrameLayout>
                    </com.google.android.material.card.MaterialCardView> <!-- Chat -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cardChat"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/menu_card_height"
                        android:layout_margin="@dimen/menu_item_margin"
                        app:cardBackgroundColor="@color/ink_300"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="4dp"
                        app:layout_columnWeight="1">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:id="@+id/txtChat"
                                style="@style/Jeu.MenuCardLabel.SCD7"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start|top"
                                android:layout_margin="@dimen/menu_item_margin"
                                android:text="Chat" />

                            <ImageView
                                android:layout_width="@dimen/menu_icon_size"
                                android:layout_height="@dimen/menu_icon_size"
                                android:layout_gravity="end|bottom"
                                android:layout_margin="@dimen/menu_item_margin"
                                app:srcCompat="@drawable/ic_chat_bubble"
                                app:tint="@color/colorPrimary_je" />
                        </FrameLayout>
                    </com.google.android.material.card.MaterialCardView>
                </androidx.gridlayout.widget.GridLayout>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView> <!-- footer 생략 -->
    </LinearLayout> <!-- 드로어 -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigationView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        app:headerLayout="@layout/nav_header_jeu"
        app:itemBackground="@drawable/nav_item_bg_jeu"
        app:menu="@menu/drawer_menu_jeu" />
</androidx.drawerlayout.widget.DrawerLayout>