<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- 메인 화면 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/brand_bg"
        android:orientation="vertical">

        <!-- ✅ 헤더 (툴바 + 햄버거 버튼) -->
        <include
            android:id="@+id/header"
            layout="@layout/inc_header_jeu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- ✅ 스크롤 영역 -->
        <androidx.core.widget.NestedScrollView
            android:id="@+id/scroll"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:paddingBottom="112dp">

                <!-- ▽ 편도/왕복 토글 -->
                <LinearLayout
                    android:id="@+id/topToggleBar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end|center_vertical"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp">

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/lblTrip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:text="편도 / 왕복"
                        android:textColor="@color/ink_600"
                        android:textSize="13sp" />

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/switchTripType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        app:showText="false"
                        app:thumbTint="@color/sw_thumb_tint"
                        app:trackTint="@color/sw_track_tint" />
                </LinearLayout>

                <!-- ▽ 검색 카드 -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardSearch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    app:cardBackgroundColor="@color/surface"
                    app:cardCornerRadius="16dp"
                    app:strokeColor="@color/divider"
                    app:strokeWidth="1dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="25dp">

                        <!-- 출발 -->
                        <LinearLayout
                            android:id="@+id/boxFrom"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_marginEnd="8dp"
                            android:layout_toStartOf="@id/btnSwap"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical">

                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:src="@drawable/ic_flight_takeoff_24"
                                    app:tint="@color/ink_600" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="6dp"
                                    android:text="출발"
                                    android:textColor="@color/ink_600"
                                    android:textSize="12sp" />
                            </LinearLayout>

                            <TextView
                                android:id="@+id/tvFrom"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dp"
                                android:text="김포(서울)"
                                android:textColor="@color/ink_900"
                                android:textSize="20sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <!-- 스왑 버튼 -->
                        <com.google.android.material.floatingactionbutton.FloatingActionButton
                            android:id="@+id/btnSwap"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_centerHorizontal="true"
                            android:layoutDirection="ltr"
                            app:backgroundTint="@color/jeju_tint"
                            app:maxImageSize="24dp"
                            app:srcCompat="@drawable/ic_swap_rounded_24"
                            app:tint="@color/jeju_primary" />

                        <!-- 도착 -->
                        <LinearLayout
                            android:id="@+id/boxTo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_toEndOf="@id/btnSwap"
                            android:gravity="end"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical">

                                <ImageView
                                    android:layout_width="17dp"
                                    android:layout_height="17dp"
                                    android:src="@drawable/ic_flight_land_24"
                                    app:tint="@color/ink_600" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="6dp"
                                    android:text="도착"
                                    android:textColor="@color/ink_600"
                                    android:textSize="12sp" />
                            </LinearLayout>

                            <TextView
                                android:id="@+id/tvTo"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dp"
                                android:text="제주"
                                android:textColor="@color/ink_900"
                                android:textSize="20sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <!-- 날짜 -->
                        <View
                            android:id="@+id/div1"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_below="@id/boxFrom"
                            android:layout_marginTop="14dp"
                            android:background="@color/divider" />

                        <LinearLayout
                            android:id="@+id/rowDate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/div1"
                            android:layout_marginTop="12dp"
                            android:background="@drawable/bg_row"
                            android:gravity="center_vertical"
                            android:padding="12dp">

                            <ImageView
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                android:src="@drawable/ic_calendar"
                                app:tint="@color/jeju_primary" />

                            <TextView
                                android:id="@+id/tvDate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:text="가는 날 / 오는 날 선택"
                                android:textColor="@color/ink_900"
                                android:textSize="14sp" />
                        </LinearLayout>

                        <!-- 인원 -->
                        <View
                            android:id="@+id/div2"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_below="@id/rowDate"
                            android:layout_marginTop="12dp"
                            android:background="@color/divider" />

                        <LinearLayout
                            android:id="@+id/rowPax"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/div2"
                            android:layout_marginTop="12dp"
                            android:background="@drawable/bg_row"
                            android:gravity="center_vertical"
                            android:padding="12dp">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_person"
                                app:tint="@color/jeju_primary" />

                            <TextView
                                android:id="@+id/tvPax"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:text="총 1명"
                                android:textColor="@color/ink_900"
                                android:textSize="14sp" />
                        </LinearLayout>
                    </RelativeLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- 검색 버튼 -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnSearch"
                    style="@style/Widget.App.PrimaryButton"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginTop="16dp"
                    android:text="항공편 검색" />

                <!-- 결과 리스트 -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvResults"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:nestedScrollingEnabled="false"
                    android:overScrollMode="never" />
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

        <!-- ✅ 하단 고정 바 -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/bottomBar"
            android:layout_width="match_parent"
            android:layout_height="88dp"
            android:layout_margin="12dp"
            android:visibility="gone"
            app:cardBackgroundColor="@color/surface"
            app:cardCornerRadius="16dp"
            app:cardElevation="16dp"
            app:strokeColor="@color/divider"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingHorizontal="16dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="총 결제 금액"
                        android:textColor="@color/ink_600"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tvTotalPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="₩0"
                        android:textColor="@color/ink_900"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnProceed"
                    android:layout_width="180dp"
                    android:layout_height="52dp"
                    android:text="오는 편 선택하기"
                    android:textAllCaps="false"
                    android:textColor="#FFFFFF"
                    app:backgroundTint="@color/jeju_primary" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>

    <!-- ✅ 드로어 메뉴 -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigationView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        app:headerLayout="@layout/nav_header_jeu"
        app:menu="@menu/drawer_menu_jeu" />
</androidx.drawerlayout.widget.DrawerLayout>
