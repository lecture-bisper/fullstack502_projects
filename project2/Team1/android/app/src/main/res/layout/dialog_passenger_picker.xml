<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp"
    android:orientation="vertical"
    android:background="@color/jeju_bg">

    <!-- 성인 -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="성인"
        android:textSize="18sp"
        android:textColor="@color/jeju_text_primary"
        android:layout_marginBottom="8dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <Button
            android:id="@+id/btn_adult_minus"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="-"
            android:textStyle="bold"
            android:paddingHorizontal="20dp"
            android:backgroundTint="@color/jeju_tint"
            android:textColor="@color/jeju_primary" />

        <TextView
            android:id="@+id/tv_adult_count"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="1"
            android:textSize="18sp"
            android:textColor="@color/jeju_text_primary" />

        <Button
            android:id="@+id/btn_adult_plus"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="+"
            android:textStyle="bold"
            android:paddingHorizontal="20dp"
            android:backgroundTint="@color/jeju_tint"
            android:textColor="@color/jeju_primary" />
    </LinearLayout>

    <!-- 아동 -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="아동"
        android:textSize="18sp"
        android:textColor="@color/jeju_text_primary"
        android:layout_marginBottom="8dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_child_minus"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="-"
            android:textStyle="bold"
            android:paddingHorizontal="20dp"
            android:backgroundTint="@color/jeju_tint"
            android:textColor="@color/jeju_primary" />

        <TextView
            android:id="@+id/tv_child_count"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="0"
            android:textSize="18sp"
            android:textColor="@color/jeju_text_primary" />

        <Button
            android:id="@+id/btn_child_plus"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="+"
            android:textStyle="bold"
            android:paddingHorizontal="20dp"
            android:backgroundTint="@color/jeju_tint"
            android:textColor="@color/jeju_primary" />
    </LinearLayout>

    <!-- 확인 버튼 -->
    <Button
        android:id="@+id/btn_confirm_passenger"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="확인"
        android:textColor="@android:color/white"
        android:backgroundTint="@color/jeju_primary"
        android:layout_marginTop="20dp" />
</LinearLayout>
