<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/footerRoot"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/jeju_tint"
    android:padding="0dp"
    android:focusable="false">

    <!-- 상단 디바이더 -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/jeju_divider" />

    <!-- 브랜드 + 슬로건 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="start|center_vertical"
        android:paddingStart="5dp"
        android:layout_marginBottom="10dp"
        android:paddingEnd="16dp"
        android:paddingTop="12dp">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_gravity="start"
            android:contentDescription="@string/app_name"
            app:srcCompat="@drawable/jeu_logo"
            android:scaleType="fitStart"
            android:adjustViewBounds="true"/>
    </LinearLayout>

    <!-- 고객지원 섹션 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/footer_cs_title"
            android:textStyle="bold"
            android:textColor="@color/jeju_text_primary"
            android:textSize="13sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="@string/footer_cs_phone"
            android:textColor="@color/ink_700"
            android:textSize="12sp"
            android:layout_marginBottom="5dp"/>

        <!-- 중간 디바이더 -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="5dp"
            android:background="@color/jeju_divider" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/footer_cs_email1"
            android:textColor="@color/ink_700"
            android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/footer_cs_email2"
            android:textColor="@color/ink_700"
            android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/footer_cs_email3"
            android:textColor="@color/ink_700"
            android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/footer_cs_email4"
            android:textColor="@color/ink_700"
            android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/footer_cs_email5"
            android:textColor="@color/ink_700"
            android:textSize="12sp"
            android:layout_marginBottom="10dp"/>

        <!-- 중간 디바이더 -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/jeju_divider" />
    </LinearLayout>

    <!-- 링크 그리드 (2열) -->
    <androidx.gridlayout.widget.GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="12dp"
        android:paddingBottom="4dp"
        app:columnCount="2">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_columnWeight="1"
            android:text="@string/footer_link_shop"
            android:textColor="@color/jeju_text_primary"
            android:textSize="12sp"
            android:layout_marginBottom="5dp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_columnWeight="1"
            android:gravity="left"
            android:text="@string/footer_link_terms"
            android:textColor="@color/jeju_text_primary"
            android:textSize="12sp"
            android:layout_marginBottom="5dp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_columnWeight="1"
            android:text="@string/footer_link_review"
            android:textColor="@color/jeju_text_primary"
            android:textSize="12sp"
            android:layout_marginBottom="5dp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_columnWeight="1"
            android:gravity="left"
            android:text="@string/footer_link_privacy"
            android:textColor="@color/jeju_text_primary"
            android:textSize="12sp"
            android:layout_marginBottom="5dp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_columnWeight="1"
            android:text="@string/footer_link_community"
            android:textColor="@color/jeju_text_primary"
            android:textSize="12sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_columnWeight="1"
            android:gravity="left"
            android:text="@string/footer_link_about"
            android:textColor="@color/jeju_text_primary"
            android:textSize="12sp" />
    </androidx.gridlayout.widget.GridLayout>

    <!-- 중간 디바이더 -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        android:background="@color/jeju_divider" />

    <!-- 회사 정보 블록 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/footer_biz_line1"
            android:textColor="@color/ink_600"
            android:textSize="11sp"
            android:layout_marginBottom="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/footer_biz_line2"
            android:textColor="@color/ink_600"
            android:textSize="11sp"
            android:layout_marginBottom="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/footer_biz_line3"
            android:textColor="@color/ink_600"
            android:textSize="11sp"
            android:layout_marginBottom="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/footer_biz_line4"
            android:textColor="@color/ink_600"
            android:textSize="11sp"
            android:layout_marginBottom="5dp"/>
    </LinearLayout>

    <!-- 하단 정책/카피라이트 줄 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="0dp"
        android:paddingBottom="12dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/footer_terms"
            android:textColor="@color/ink_700"
            android:textSize="11sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="·"
            android:paddingStart="6dp"
            android:paddingEnd="6dp"
            android:textColor="@color/ink_600"
            android:textSize="11sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/footer_privacy"
            android:textColor="@color/ink_700"
            android:textSize="11sp" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

    </LinearLayout>
</LinearLayout>
