<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:layout_margin="8dp">
    <LinearLayout android:padding="12dp" android:orientation="vertical"
        android:layout_width="match_parent" android:layout_height="wrap_content">
        <ImageView android:id="@+id/img" android:layout_width="match_parent"
            android:layout_height="180dp" android:scaleType="centerCrop"/>
        <TextView android:id="@+id/tvTitle" android:textStyle="bold"
            android:textSize="16sp" android:layout_marginTop="8dp"
            android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        <TextView android:id="@+id/tvMeta" android:textSize="12sp"
            android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>
