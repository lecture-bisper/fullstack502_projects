<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- 메인 콘텐츠 -->
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/brand_bg"
        android:fitsSystemWindows="true">

        <!-- ✅ 공통 헤더 -->
        <include
            android:id="@+id/header"
            layout="@layout/inc_header_jeu" />

        <!-- 본문 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="?attr/actionBarSize"
            android:padding="16dp">

            <TextView
                android:id="@+id/tvGuide"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="※ 여권 정보와 동일하게 입력해 주세요."
                android:textColor="#383838"
                android:textSize="15sp"
                android:textStyle="bold" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="12dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvPassengers"
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:clipToPadding="false"
                android:overScrollMode="never"
                android:paddingVertical="4dp"
                android:scrollbars="none"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="8dp" />

            <androidx.core.widget.NestedScrollView
                android:id="@+id/scroll"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:fillViewport="true"
                android:clipToPadding="false"
                android:paddingBottom="88dp">

                <LinearLayout
                    android:id="@+id/formContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/surface"
                    android:orientation="vertical"
                    android:padding="12dp"
                    android:importantForAutofill="noExcludeDescendants">

                    <!-- 성(영문) -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilLastNameEn"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="성(영문)"
                        app:boxStrokeColor="@color/jeju_primary">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etLastNameEn"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:imeOptions="actionNext"
                            android:inputType="textNoSuggestions|textCapCharacters"
                            android:autofillHints=""
                            android:importantForAutofill="no"
                            android:maxLines="1" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- 이름(영문) -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilFirstNameEn"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="이름(영문)"
                        app:boxStrokeColor="@color/jeju_primary">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etFirstNameEn"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:imeOptions="actionNext"
                            android:inputType="textNoSuggestions|textCapCharacters"
                            android:autofillHints=""
                            android:importantForAutofill="no"
                            android:maxLines="1" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- 성별 -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="성별"
                        android:textColor="@color/ink_800"
                        android:textStyle="bold" />

                    <RadioGroup
                        android:id="@+id/rgGender"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp">

                        <com.google.android.material.radiobutton.MaterialRadioButton
                            android:id="@+id/rbMale"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="남자" />

                        <com.google.android.material.radiobutton.MaterialRadioButton
                            android:id="@+id/rbFemale"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="여자" />
                    </RadioGroup>

                    <!-- 생년월일 -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilBirth"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="생년월일 (YYYY-MM-DD)"
                        app:boxStrokeColor="@color/jeju_primary"
                        app:endIconDrawable="@drawable/ic_calendar"
                        app:endIconMode="custom">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etBirth"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:clickable="true"
                            android:focusable="false"
                            android:autofillHints=""
                            android:importantForAutofill="no" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- 여권번호 -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilPassportNo"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="여권번호"
                        app:boxStrokeColor="@color/jeju_primary">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etPassportNo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:imeOptions="actionNext"
                            android:inputType="textNoSuggestions|textCapCharacters"
                            android:autofillHints=""
                            android:importantForAutofill="no"
                            android:maxLines="1" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- 여권 만료일 -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilPassportExpiry"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="여권 만료일 (YYYY-MM-DD)"
                        app:boxStrokeColor="@color/jeju_primary"
                        app:endIconDrawable="@drawable/ic_calendar"
                        app:endIconMode="custom">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etPassportExpiry"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:clickable="true"
                            android:focusable="false"
                            android:autofillHints=""
                            android:importantForAutofill="no" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- 국적 -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilNationality"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="국적 (예: KOR)"
                        app:boxStrokeColor="@color/jeju_primary">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etNationality"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:imeOptions="actionNext"
                            android:inputType="textNoSuggestions|textCapCharacters"
                            android:autofillHints=""
                            android:importantForAutofill="no"
                            android:maxLines="1" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- 연락처 -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilPhone"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="연락처 (숫자만)"
                        app:boxStrokeColor="@color/jeju_primary">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etPhone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:imeOptions="actionNext"
                            android:inputType="phone"
                            android:autofillHints=""
                            android:importantForAutofill="no"
                            android:maxLines="1" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- 이메일 -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilEmail"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="이메일"
                        app:boxStrokeColor="@color/jeju_primary">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etEmail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:imeOptions="actionDone"
                            android:inputType="textEmailAddress"
                            android:autofillHints=""
                            android:importantForAutofill="no"
                            android:maxLines="1" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- (선택) 비상 연락처 -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="(선택) 비상 연락처"
                        android:textColor="@color/ink_700"
                        android:textStyle="bold" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilEmergencyName"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="이름(선택)"
                        app:boxStrokeColor="@color/jeju_primary">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etEmergencyName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textNoSuggestions"
                            android:autofillHints=""
                            android:importantForAutofill="no"
                            android:maxLines="1" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilEmergencyPhone"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="연락처(선택)"
                        app:boxStrokeColor="@color/jeju_primary">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etEmergencyPhone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="phone"
                            android:autofillHints=""
                            android:importantForAutofill="no"
                            android:maxLines="1" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="84dp" />
                </LinearLayout>
            </androidx.core.widget.NestedScrollView>
        </LinearLayout>

        <!-- 하단 버튼 -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnNext"
            style="@style/Widget.MaterialComponents.Button"
            android:text="다음"
            android:enabled="false"
            android:layout_margin="16dp"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_gravity="bottom"
            android:elevation="8dp"
            app:backgroundTint="@color/jeju_primary"
            android:textColor="@android:color/white"
            app:cornerRadius="16dp"/>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <!-- ✅ 드로어 메뉴 -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigationView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        app:headerLayout="@layout/nav_header_jeu"
        app:menu="@menu/drawer_menu_jeu"
        app:itemBackground="@drawable/nav_item_bg_jeu"/>
</androidx.drawerlayout.widget.DrawerLayout>
