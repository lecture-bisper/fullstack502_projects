<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@color/colorPrimary_je">

    <TextView
        android:id="@+id/tvUserGreeting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="@string/greeting_fmt"
        android:textColor="@color/colorTextLight"
        android:textStyle="bold"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/tvUserEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        tools:text="@string/sample_email"
        android:textColor="@color/colorBg_je"
        android:alpha="0.8"
        android:textSize="13sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnMyPage"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="15sp"
            android:text="@string/mypage"
            android:textAllCaps="false"
            android:textColor="@color/colorBg_je"
            app:strokeColor="@color/colorBg_je"
            app:strokeWidth="1dp"
            app:iconTint="@color/colorBg_je"
            android:insetTop="0dp"
            android:insetBottom="0dp"/>

        <Space
            android:layout_width="12dp"
            android:layout_height="0dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnLogout"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/logout"
            android:textSize="15sp"
            android:textAllCaps="false"
            android:textColor="@color/colorBg_je"
            app:strokeColor="@color/colorBg_je"
            app:strokeWidth="1dp"
            app:iconTint="@color/colorBg_je"
            android:insetTop="0dp"
            android:insetBottom="0dp"/>
    </LinearLayout>
</LinearLayout>
