<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBg_je">

    <!-- 전체 스크롤 컨테이너 (한 장으로 끝낸다) -->
    <ScrollView
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">


            <!-- 회원 정보 카드 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#FFFDF9"
                android:padding="16dp"
                android:elevation="2dp"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="12dp">

                <!-- 제목 -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="내 정보"
                    android:textColor="#000"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_margin="8dp"
                    android:background="#E0E0E0" />

                <!-- 정보 내용 -->
                <TextView
                    android:id="@+id/tv_user_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="아이디: user123"
                    android:textSize="14sp"
                    android:textColor="#333"
                    android:layout_marginBottom="6dp" />

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="이름: 홍길동"
                    android:textSize="14sp"
                    android:textColor="#333"
                    android:layout_marginBottom="6dp" />

                <TextView
                    android:id="@+id/tv_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email: example@email.com"
                    android:textSize="14sp"
                    android:textColor="#333"
                    android:layout_marginBottom="6dp" />

                <TextView
                    android:id="@+id/tv_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="전화번호: 010-1234-5678"
                    android:textSize="14sp"
                    android:textColor="#333"
                    android:layout_marginBottom="12dp" />

                <!-- 버튼 2개: 정보 수정 + 로그아웃 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="end">

                    <Button
                        android:id="@+id/btn_edit_info"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:minWidth="100dp"
                        android:text="정보 수정"
                        android:textColor="#fff"
                        android:textSize="14sp"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        android:background="@drawable/btn_rounded"
                        android:backgroundTint="#6a4fff"/>

                    <Space
                        android:layout_width="12dp"
                        android:layout_height="1dp" />

                    <Button
                        android:id="@+id/btn_logout"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:minWidth="100dp"
                        android:text="로그아웃"
                        android:textColor="#fff"
                        android:textSize="14sp"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        android:background="@drawable/btn_rounded"
                        android:backgroundTint="#FF4444"/>
                </LinearLayout>
            </LinearLayout>


            <!-- 내 활동 메뉴 리스트 (각 항목 별도 액티비티로 이동) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="#FFFDF9"
                android:elevation="5dp"
                android:orientation="vertical"
                android:padding="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="내 활동"
                    android:textColor="#000"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_margin="8dp"
                    android:background="#E0E0E0" />

                <!-- 공통 행 스타일 -->
                <LinearLayout
                    android:id="@+id/row_my_posts"
                    style="@style/RowItemStyle"
                    android:layout_marginVertical="10dp">

                    <TextView
                        style="@style/RowItemTitle"
                        android:text="내가 쓴 글" />

                    <TextView
                        style="@style/RowItemChevron"
                        android:text="›" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/row_my_comments"
                    style="@style/RowItemStyle"
                    android:layout_marginVertical="10dp">

                    <TextView
                        style="@style/RowItemTitle"
                        android:text="내가 쓴 댓글" />

                    <TextView
                        style="@style/RowItemChevron"
                        android:text="›" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/row_liked_posts"
                    style="@style/RowItemStyle"
                    android:layout_marginVertical="10dp">

                    <TextView
                        style="@style/RowItemTitle"
                        android:text="좋아요 한 게시글" />

                    <TextView
                        style="@style/RowItemChevron"
                        android:text="›" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/row_flight_wishlist"
                    style="@style/RowItemStyle"
                    android:layout_marginVertical="10dp">

                    <TextView
                        style="@style/RowItemTitle"
                        android:text="항공 즐겨찾기" />

                    <TextView
                        style="@style/RowItemChevron"
                        android:text="›" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/row_lodging_wishlist"
                    style="@style/RowItemStyle"
                    android:layout_marginVertical="10dp">

                    <TextView
                        style="@style/RowItemTitle"
                        android:text="숙소 즐겨찾기" />

                    <TextView
                        style="@style/RowItemChevron"
                        android:text="›" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/row_flight_bookings"
                    style="@style/RowItemStyle"
                    android:layout_marginVertical="10dp">

                    <TextView
                        style="@style/RowItemTitle"
                        android:text="항공 예매내역" />

                    <TextView
                        style="@style/RowItemChevron"
                        android:text="›" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/row_lodging_bookings"
                    style="@style/RowItemStyle"
                    android:layout_marginVertical="10dp">

                    <TextView
                        style="@style/RowItemTitle"
                        android:text="숙박 예약내역" />

                    <TextView
                        style="@style/RowItemChevron"
                        android:text="›" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
