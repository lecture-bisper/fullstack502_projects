<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/jeju_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- ✅ 상단 선택된 Chip 영역 -->
    <com.google.android.material.chip.ChipGroup
        android:id="@+id/chipGroupSelected"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        app:singleLine="false"
        app:chipSpacing="8dp"/>


    <!-- ✅ 선택된 날짜/인원 표시 -->
    <TextView
        android:id="@+id/tvSelectedDatePeople"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:layout_margin="8dp"
        android:visibility="gone"/>

    <!-- ✅ 3단 리스트 (시 / 읍·면·동 / 리) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvCity"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/jeju_surface"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvTown"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/jeju_surface"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvVillage"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/jeju_surface"/>
    </LinearLayout>

    <!-- ✅ 날짜, 인원 선택 버튼 -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSelectDatePeople"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_margin="12dp"
        android:text="날짜, 인원 선택"
        android:textAllCaps="false"
        android:textColor="@color/white"
        app:cornerRadius="12dp"
        app:backgroundTint="@color/jeju_primary"/>

    <!-- ✅ 숙소 검색 버튼 -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSearchLodging"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_margin="12dp"
        android:text="숙소 검색"
        android:textAllCaps="false"
        android:enabled="false"
        android:textColor="@color/white"
        app:cornerRadius="12dp"
        app:backgroundTint="@color/jeju_primary"/>
</LinearLayout>
