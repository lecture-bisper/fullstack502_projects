<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- 드로어 레이아웃 -->
    <androidx.drawerlayout.widget.DrawerLayout
        android:id="@+id/drawerLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- 메인 컨텐츠 -->
        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- 스크롤 가능 영역 -->
            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true"
                android:background="@color/brand_bg"
                android:overScrollMode="never">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- ✅ 공통 헤더 -->
                    <include
                        android:id="@+id/header"
                        layout="@layout/inc_header_jeu" />

                    <!-- 본문 컨텐츠 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp"
                        android:gravity="center_horizontal">

                        <!-- ✅ 결제 완료 카드 -->
                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            app:cardCornerRadius="16dp"
                            app:cardElevation="6dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:padding="16dp">

                                <ImageView
                                    android:id="@+id/imgLodging"
                                    android:layout_width="match_parent"
                                    android:layout_height="200dp"
                                    android:scaleType="centerCrop"
                                    android:background="@android:color/darker_gray" />

                                <TextView
                                    android:id="@+id/tvLodgingName"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="12dp"
                                    android:text="숙소명 - 룸타입 (상태)"
                                    android:textSize="18sp"
                                    android:textStyle="bold"
                                    android:textColor="@android:color/black" />

                                <TextView
                                    android:id="@+id/tvLodgingAddr"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="4dp"
                                    android:text="주소: 제주특별자치도 제주시..."
                                    android:textSize="14sp"
                                    android:textColor="@android:color/darker_gray" />

                                <TextView
                                    android:id="@+id/tvCheckInOut"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8dp"
                                    android:text="체크인: 2025-08-22 • 체크아웃: 2025-08-23"
                                    android:textSize="15sp"
                                    android:textColor="@android:color/black" />

                                <TextView
                                    android:id="@+id/tvRoomType"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="4dp"
                                    android:text="객실 타입: 싱글룸"
                                    android:textSize="15sp"
                                    android:textColor="@android:color/black" />

                                <TextView
                                    android:id="@+id/tvTotalPrice"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8dp"
                                    android:text="총 결제금액: 120,000원"
                                    android:textSize="16sp"
                                    android:textStyle="bold"
                                    android:textColor="@android:color/black" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <!-- 홈으로 가기 버튼 -->
                        <Button
                            android:id="@+id/btnGoHome"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:layout_marginTop="20dp"
                            android:text="홈으로 가기"
                            android:textColor="@android:color/white" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.core.widget.NestedScrollView>
        </androidx.coordinatorlayout.widget.CoordinatorLayout>

        <!-- ✅ 드로어 메뉴 -->
        <com.google.android.material.navigation.NavigationView
            android:id="@+id/navigationView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            app:headerLayout="@layout/nav_header_jeu"
            app:menu="@menu/drawer_menu_jeu"
            app:itemBackground="@drawable/nav_item_bg_jeu" />
    </androidx.drawerlayout.widget.DrawerLayout>
</LinearLayout>
