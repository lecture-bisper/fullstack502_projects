<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- 메뉴 카드 라벨 -->
    <style name="Jeu.MenuCardLabel.SCD7" parent="TextAppearance.Material3.BodyLarge">
        <item name="fontFamily">@font/scd_7</item>
        <item name="android:fontFamily">@font/scd_7</item>
        <item name="android:textColor">@color/colorTextDark</item>
        <item name="android:textSize">@dimen/menu_label_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- 앱 전체 테마 -->
    <style name="Theme.App" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- 브랜드 컬러 -->
        <item name="colorPrimary">@color/jeju_primary</item>
        <item name="colorPrimaryVariant">@color/jeju_primary</item>
        <item name="colorOnPrimary">@android:color/white</item>

        <!-- 시스템 바 색상 -->
        <item name="android:statusBarColor">@color/jeju_primary</item>
        <item name="android:navigationBarColor">@color/brand_bg</item>
        <item name="android:windowBackground">@color/brand_bg</item>

        <!-- 폰트 -->
        <item name="android:fontFamily">@font/scd_4</item>
        <item name="fontFamily">@font/scd_3</item>

        <!-- 배경/포인트 컬러 -->
        <item name="android:colorBackground">@color/jeju_bg</item>
        <item name="colorSurface">@color/jeju_bg</item>
        <item name="colorSecondary">@color/jeju_primary</item>

        <!-- 텍스트 색상 -->
        <item name="android:textColorPrimary">@color/jeju_text_primary</item>
        <item name="android:textColorHint">@color/jeju_text_muted</item>
    </style>

    <!-- 공통 버튼 -->
    <style name="Widget.App.PrimaryButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/jeju_primary</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="cornerRadius">16dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:paddingLeft">18dp</item>
        <item name="android:paddingRight">18dp</item>
        <item name="android:fontFamily">@font/scd_3</item>
    </style>

    <!-- 칩/태그 -->
    <style name="Widget.App.OutlineChip" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/chip_bg</item>
        <item name="chipStrokeColor">@color/divider</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="android:textColor">@color/ink_900</item>
        <item name="rippleColor">@color/jeju_tint</item>
        <item name="android:fontFamily">@font/scd_4</item>
    </style>

    <!-- footer -->
    <style name="Jeu" parent="Theme.App"/>
</resources>
