<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- 기본 버튼 -->
    <style name="FilledButton" parent="Widget.Material3.Button">
        <item name="android:textColor">@android:color/white</item>
        <item name="backgroundTint">?attr/colorPrimary</item>
        <item name="cornerRadius">8dp</item>
    </style>

    <!-- 행 아이템 (리스트 row) -->
    <style name="RowItemStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="RowItemTitle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">#111111</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="RowItemChevron">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#888888</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="MainFont" parent="TextAppearance.Material3.BodyLarge">
        <item name="fontFamily">@font/scd_9</item>
        <item name="android:fontFamily">@font/scd_9</item>
        <item name="android:textColor">#764507</item>
    </style>



    <style name="FormField" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_marginBottom">12dp</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxCornerRadiusTopStart">10dp</item>
        <item name="boxCornerRadiusTopEnd">10dp</item>
        <item name="boxCornerRadiusBottomStart">10dp</item>
        <item name="boxCornerRadiusBottomEnd">10dp</item>
    </style>

    <!-- 항공편 선택 달력 모달창의 가는날 오는날 텍스트 커스텀 -->
    <style name="CustomDatePickerTheme" parent="ThemeOverlay.MaterialComponents.MaterialCalendar">
        <!-- 타이틀 텍스트 스타일 변경 -->
        <item name="materialCalendarTheme">@style/CustomCalendarTheme</item>
    </style>

    <style name="CustomCalendarTheme" parent="ThemeOverlay.MaterialComponents.MaterialCalendar.Fullscreen">
        <item name="materialCalendarHeaderLayout">@style/CustomCalendarHeaderLayout</item>
    </style>

    <style name="CustomCalendarHeaderLayout" parent="Widget.MaterialComponents.MaterialCalendar.HeaderLayout">
        <item name="android:textSize">22sp</item> <!-- 원하는 크기로 변경 -->
        <item name="android:textStyle">bold</item> <!-- 굵게 -->
    </style>

    <!-- footer -->
    <style name="Jeu.FooterLink">
        <item name="android:textColor">@color/jeju_text_primary</item>  <!-- #111111 -->
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">12sp</item>
        <item name="android:paddingStart">4dp</item>
        <item name="android:paddingEnd">4dp</item>
    </style>

    <style name="Jeu.FooterSeparator">
        <item name="android:textColor">@color/ink_600</item>            <!-- #556B69 -->
        <item name="android:textSize">12sp</item>
        <item name="android:paddingStart">2dp</item>
        <item name="android:paddingEnd">2dp</item>
    </style>

    <style name="Jeu.FooterSmall">
        <item name="android:textColor">@color/ink_600</item>
        <item name="android:textSize">12sp</item>
    </style>

</resources>
