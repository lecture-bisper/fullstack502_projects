<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical"
  android:id="@+id/main"
  android:background="@color/white">
    
    <ScrollView
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="1">
        
        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          android:layout_marginStart="15dp"
          android:layout_marginEnd="15dp">
            
            <android.widget.ImageView
              android:id="@+id/logo"
              android:layout_width="100dp"
              android:layout_height="120dp"
              android:layout_gravity="center"
              android:layout_marginTop="90dp"
              android:layout_marginBottom="60dp"
              android:background="@drawable/logo_img"/>
            
            <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="이름"
              android:textColor="@color/gray"
              android:textSize="18sp"
              android:layout_marginTop="20dp"/>
            
            <EditText
              android:id="@+id/user_name"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_gravity="center"
              android:layout_marginTop="10dp"
              android:background="@drawable/btn_type01"
              android:hint="이름"
              android:inputType="text"
              android:paddingStart="15dp"
              android:paddingEnd="15dp"
              android:paddingTop="13dp"
              android:paddingBottom="13dp"
              android:textColor="@color/black"
              android:textColorHint="@color/gray" />
            
            <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="15dp"
              android:text="ID"
              android:textColor="@color/gray"
              android:textSize="18sp" />
            
            <EditText
              android:id="@+id/user_id"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_gravity="center"
              android:layout_marginTop="10dp"
              android:background="@drawable/btn_type01"
              android:hint="ID"
              android:inputType="text"
              android:paddingStart="15dp"
              android:paddingEnd="15dp"
              android:paddingTop="13dp"
              android:paddingBottom="13dp"
              android:textColor="@color/black"
              android:textColorHint="@color/gray" />
            
            <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="15dp"
              android:text="PASSWORD"
              android:textColor="@color/gray"
              android:textSize="18sp" />
            
            <EditText
              android:id="@+id/user_pw"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_gravity="center"
              android:layout_marginTop="10dp"
              android:background="@drawable/btn_type01"
              android:hint="*********"
              android:inputType="textPassword"
              android:paddingStart="15dp"
              android:paddingEnd="15dp"
              android:paddingTop="13dp"
              android:paddingBottom="13dp"
              android:textColor="@color/black"
              android:textColorHint="@color/gray" />
            
            <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="15dp"
              android:text="PASSWORD CHECK"
              android:textColor="@color/gray"
              android:textSize="18sp" />
            
            <EditText
              android:id="@+id/check_pw"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_gravity="center"
              android:layout_marginTop="10dp"
              android:background="@drawable/btn_type01"
              android:hint="*********"
              android:inputType="textPassword"
              android:paddingStart="15dp"
              android:paddingEnd="15dp"
              android:paddingTop="13dp"
              android:paddingBottom="13dp"
              android:textColor="@color/black"
              android:textColorHint="@color/gray" />
            
            <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="15dp"
              android:text="전화번호"
              android:textColor="@color/gray"
              android:textSize="18sp" />
            
            <EditText
              android:id="@+id/user_tel"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_gravity="center"
              android:layout_marginTop="10dp"
              android:background="@drawable/btn_type01"
              android:hint="01012345678"
              android:inputType="number"
              android:paddingStart="15dp"
              android:paddingEnd="15dp"
              android:paddingTop="13dp"
              android:paddingBottom="13dp"
              android:textColor="@color/black"
              android:textColorHint="@color/gray" />
            
            <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="15dp"
              android:text="이메일"
              android:textColor="@color/gray"
              android:textSize="18sp" />
            
            <EditText
              android:id="@+id/user_email"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_gravity="center"
              android:layout_marginTop="10dp"
              android:background="@drawable/btn_type01"
              android:hint="test@test.com"
              android:inputType="text"
              android:paddingStart="15dp"
              android:paddingEnd="15dp"
              android:paddingTop="13dp"
              android:paddingBottom="13dp"
              android:textColor="@color/black"
              android:textColorHint="@color/gray" />
            
            <android.widget.Button
              android:id="@+id/edit_btn"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="50dp"
              android:background="@drawable/btn_type02"
              android:text="수정완료"
              android:textColor="@color/white"
              android:textSize="18sp"
              android:layout_marginBottom="30dp"/>
        </LinearLayout>
    </ScrollView>
    
    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="30dp">
    
    </LinearLayout>
</LinearLayout>