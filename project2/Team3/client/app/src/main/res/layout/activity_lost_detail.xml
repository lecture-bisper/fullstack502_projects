<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/trust_blue_background"
    android:id="@+id/main"
    android:theme="@style/ThemeOverlay.Pretendard">

    <!-- 상단바 -->
    <include
        android:id="@+id/topBar"
        layout="@layout/inc_top_bar"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- 스크롤 영역 -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollArea"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/topBar"
        app:layout_constraintBottom_toTopOf="@id/bottomBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="@dimen/full_layout_margin"
            android:gravity="center_horizontal">

            <!-- 이미지(데이터로만 채움) -->
            <ImageView
                android:id="@+id/ivPhoto"
                android:layout_width="@dimen/image_width"
                android:layout_height="@dimen/image_height"
                android:layout_marginBottom="@dimen/under_element_margin"
                android:scaleType="centerCrop"
                android:contentDescription="@string/regist_image"
                tools:src="@drawable/ic_launcher_background" />

            <!-- 카테고리(읽기 전용) -->
            <TextView
                android:id="@+id/tvCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/bteween_element_margin"
                android:textAppearance="?attr/textAppearanceBodyLarge"
                tools:text="지갑"
                android:textColor="@color/trust_blue_text"/>

            <!-- 분실물 명 (라벨 + 읽기 전용 값) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="start">

                <!-- 라벨: LOST/FOUND에 따라 문자열 교체 -->
                <TextView
                    android:id="@+id/lblItemName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/lost_item_name"
                    android:textSize="@dimen/text_size_detail"
                    android:textColor="@color/trust_blue_text"/>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/OutlinedTextBox">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/tvItemName"
                        style="@style/OutlinedTextBoxInner"
                        android:focusable="false"
                        android:clickable="false"
                        android:cursorVisible="false"
                        android:longClickable="false"
                        android:inputType="none"
                        android:textIsSelectable="true"
                        tools:text="브라운 레더 지갑" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <!-- 분실자 (라벨 고정 + 읽기 전용 값) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="start">

                <!-- 라벨: 분실자는 LOST/FOUND 모두 동일 -->
                <TextView
                    android:id="@+id/lblPerson"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/lost_person"
                    android:textSize="@dimen/text_size_detail"
                    android:textColor="@color/trust_blue_text"/>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/OutlinedTextBox">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/tvLostPerson"
                        style="@style/OutlinedTextBoxInner"
                        android:focusable="false"
                        android:clickable="false"
                        android:cursorVisible="false"
                        android:longClickable="false"
                        android:inputType="none"
                        android:textIsSelectable="true"
                        tools:text="홍길동" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <!-- 일자 (라벨 + 읽기 전용 값) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="start">

                <!-- 라벨: LOST/FOUND에 따라 문자열 교체 -->
                <TextView
                    android:id="@+id/lblDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/lost_date"
                    android:textSize="@dimen/text_size_detail"
                    android:textColor="@color/trust_blue_text"/>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/OutlinedTextBox">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/tvLostDate"
                        style="@style/OutlinedTextBoxInner"
                        android:focusable="false"
                        android:clickable="false"
                        android:cursorVisible="false"
                        android:longClickable="false"
                        android:inputType="none"
                        android:textIsSelectable="true"
                        tools:text="2025-08-10" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <!-- 주소 + 지도 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="start">

                <!-- 라벨: LOST/FOUND에 따라 문자열 교체 -->
                <TextView
                    android:id="@+id/lblAddr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/lost_addr"
                    android:textSize="@dimen/text_size_detail"
                    android:layout_marginBottom="@dimen/under_element_margin"
                    android:textColor="@color/trust_blue_text"/>

                <!-- 주소 표시(읽기 전용) -->
                <com.google.android.material.textfield.TextInputLayout
                    style="@style/OutlinedTextBox">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/tvAddress"
                        style="@style/OutlinedTextBoxInner"
                        android:focusable="false"
                        android:clickable="false"
                        android:cursorVisible="false"
                        android:longClickable="false"
                        android:inputType="none"
                        android:textIsSelectable="true"
                        tools:text="서울특별시 중구 을지로 100" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- 지도 -->
                <androidx.fragment.app.FragmentContainerView
                    android:id="@+id/map_fragment"
                    android:name="com.naver.maps.map.MapFragment"
                    android:layout_width="@dimen/image_width"
                    android:layout_height="@dimen/image_height"
                    android:layout_marginTop="@dimen/under_element_margin"
                    android:layout_marginBottom="@dimen/under_element_margin" />
            </LinearLayout>

            <!-- 보관장소 (FOUND 전용: 기본 GONE) -->
            <TextView
                android:id="@+id/lblStorage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:text="보관장소"
                android:textSize="@dimen/text_size_detail"
                android:visibility="gone"
                android:textColor="@color/trust_blue_text"/>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilStorage"
                style="@style/OutlinedTextBox"
                android:visibility="gone">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/tv_storage"
                    style="@style/OutlinedTextBoxInner"
                    android:focusable="false"
                    android:clickable="false"
                    android:cursorVisible="false"
                    android:longClickable="false"
                    android:inputType="none"
                    android:textIsSelectable="true"
                    tools:text="서울시 A센터 1층 보관함" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- 내용 (라벨 + 읽기 전용, 멀티라인) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="start">

                <TextView
                    android:id="@+id/lblContent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/content"
                    android:textSize="@dimen/text_size_detail"
                    android:textColor="@color/trust_blue_text"/>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/OutlinedTextBox">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/tvContent"
                        style="@style/OutlinedTextBoxInner"
                        android:focusable="false"
                        android:clickable="false"
                        android:cursorVisible="false"
                        android:longClickable="false"
                        android:inputType="none"
                        android:textIsSelectable="true"
                        android:overScrollMode="ifContentScrolls"
                        android:maxLines="6"
                        android:scrollbars="vertical"
                        tools:text="을지로 근처에서 분실했습니다. 갈색 카드 수납이 있는 지갑입니다." />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- 하단 고정 바 -->
    <LinearLayout
        android:id="@+id/bottomBar"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:orientation="vertical"
        android:background="?attr/colorSurface"
        android:elevation="6dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:backgroundTint="@color/trust_blue_background">

        <!-- 작성자일 때 -->
        <LinearLayout
            android:id="@+id/buttonsRow"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:visibility="visible"
            android:baselineAligned="false"
            android:background="@color/trust_blue_background">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnUpdate"
                android:textColor="@color/white"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/update"
                android:textSize="16dp"
                android:backgroundTint="@color/trust_blue_primary"/>

            <Space
                android:layout_width="12dp"
                android:layout_height="0dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnComplete"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="처리완료"
                android:textSize="16dp"
                android:backgroundTint="@color/trust_blue_primary"
                android:textColor="@color/white"/>
        </LinearLayout>

        <!-- 작성자 아닐 때: 채팅하기 버튼으로 교체 -->
        <LinearLayout
            android:id="@+id/buttonsRowLimit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:visibility="gone"
            android:baselineAligned="false"
            android:background="@color/trust_blue_background">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnChat"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="채팅하기"
                android:textSize="16dp"
                android:textColor="@color/white"
                android:backgroundTint="@color/trust_blue_primary"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/button_after_complete"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:visibility="gone"
            android:background="@color/trust_blue_background">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="처리 완료된 게시글입니다"
                android:textColor="@color/gray_300_cool"
                android:gravity="center"
                android:textSize="16dp"/>
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
