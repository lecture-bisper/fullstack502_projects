<?xml version="1.0" encoding="utf-8"?>


<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/trust_blue_background"
    android:theme="@style/ThemeOverlay.Pretendard">

    <!--상단 고정 뒤로가기 바 가져오기-->
    <include
        android:id="@+id/topBar"
        layout="@layout/inc_top_bar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!--  전체 스크롤뷰-->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollArea"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/topBar">

        <!--    전체 스크롤 뷰 이하 전체 화면-->
        <LinearLayout
            android:id="@+id/main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/full_layout_margin"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="로그인"
                    android:textSize="40dp"
                    android:textColor="@color/trust_blue_text"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:gravity="center"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_user1"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="140dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="40dp"
                    android:checkable="true"
                    android:tag="USER"
                    android:text="일반 사용자"
                    android:backgroundTint="@color/category_button_bg"
                    android:textColor="@color/category_button_text"
                    app:strokeColor="@color/trust_blue_secondary"
                    app:strokeWidth="1dp"/>


                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_user2"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="140dp"
                    android:layout_height="match_parent"
                    android:checkable="true"
                    android:tag="OFFICIAL"
                    android:text="공공기관"
                    android:backgroundTint="@color/category_button_bg"
                    android:textColor="@color/category_button_text"
                    app:strokeColor="@color/trust_blue_secondary"
                    app:strokeWidth="1dp"/>
            </LinearLayout>

            <!--        분실물 명+입력박스-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="아이디"
                    android:textSize="@dimen/text_size_detail"
                    android:textColor="@color/trust_blue_text"/>

                <com.google.android.material.textfield.TextInputLayout style="@style/OutlinedTextBox"
                    app:boxBackgroundColor="@color/trust_blue_surface">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/login_user_id"
                        style="@style/OutlinedTextBoxInner" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>
            <!--분실자-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="비밀번호"
                    android:textSize="@dimen/text_size_detail"
                    android:textColor="@color/trust_blue_text" />

                <com.google.android.material.textfield.TextInputLayout style="@style/OutlinedTextBox"
                    app:boxBackgroundColor="@color/trust_blue_surface">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/login_user_pw"
                        style="@style/OutlinedTextBoxInner" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal"
                android:visibility="gone">

                <CheckBox
                    android:id="@+id/cb_auto_login"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:text="자동 로그인" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Button
                    android:id="@+id/login_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="20dp"
                    android:text="로그인"
                    android:textSize="20dp"
                    android:textColor="@color/white"
                    android:backgroundTint="@color/trust_blue_primary"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btn_join"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginHorizontal="80dp"
                    android:layout_marginTop="10dp"
                    android:text="회원가입"
                    android:textColor="@color/white"
                    android:backgroundTint="@color/trust_blue_primary"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <include
        layout="@layout/inc_login_bar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>