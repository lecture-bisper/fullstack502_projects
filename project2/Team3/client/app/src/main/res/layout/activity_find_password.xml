<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/trust_blue_background"
    android:theme="@style/ThemeOverlay.Pretendard">

    <!--상단 고정 뒤로가기 바 가져오기-->
    <include
        android:id="@+id/topBar"
        layout="@layout/inc_top_bar" />

    <!--  전체 스크롤뷰-->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollArea"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/topBar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!--    전체 스크롤 뷰 이하 전체 화면-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/main"
            android:gravity="center"
            android:layout_margin="@dimen/full_layout_margin">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="비밀번호 변경"
                    android:gravity="center"
                    android:textSize="40dp"
                    android:textColor="@color/trust_blue_text" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="left">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="현재 비밀번호"
                    android:textSize="@dimen/text_size_detail"
                    android:textColor="@color/trust_blue_text"/>
                <com.google.android.material.textfield.TextInputLayout
                    style="@style/OutlinedTextBox"
                    app:boxBackgroundColor="@color/trust_blue_surface">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/old_pw"
                        style="@style/OutlinedTextBoxInner"
                        android:inputType="textPassword"/>
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="left">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="새 비밀번호"
                    android:textSize="@dimen/text_size_detail"
                    android:textColor="@color/trust_blue_text"/>
                <com.google.android.material.textfield.TextInputLayout
                    style="@style/OutlinedTextBox"
                    app:boxBackgroundColor="@color/trust_blue_surface">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/new_pw"
                        style="@style/OutlinedTextBoxInner"
                        android:inputType="textPassword"/>
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="left">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="새 비밀번호 확인"
                    android:textSize="@dimen/text_size_detail"
                    android:textColor="@color/trust_blue_text"/>
                <com.google.android.material.textfield.TextInputLayout
                    style="@style/OutlinedTextBox"
                    app:boxBackgroundColor="@color/trust_blue_surface">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/new_pw_confirm"
                        style="@style/OutlinedTextBoxInner"
                        android:inputType="textPassword"/>
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Button
                    android:id="@+id/change_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="비밀번호 변경"
                    android:layout_marginTop="20dp"
                    android:textSize="16dp"
                    android:layout_marginHorizontal="20dp"
                    android:backgroundTint="@color/trust_blue_primary"
                    android:textColor="@color/white"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
    <include
        layout="@layout/inc_login_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>