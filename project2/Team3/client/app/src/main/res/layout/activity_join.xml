<?xml version="1.0" encoding="utf-8"?>


<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/trust_blue_background"
    android:theme="@style/ThemeOverlay.Pretendard">

    <!--상단 고정 뒤로가기 바 가져오기-->
    <include
        android:id="@+id/topBar"
        layout="@layout/inc_top_bar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!--  전체 스크롤뷰-->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollArea"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/topBar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!--    전체 스크롤 뷰 이하 전체 화면-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/main"
            android:gravity="center"
            android:layout_margin="@dimen/full_layout_margin">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="회원가입"
                    android:gravity="center"
                    android:textSize="40dp"
                    android:textColor="@color/trust_blue_text"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="30dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_user1"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="140dp"
                    android:layout_height="match_parent"
                    android:text="일반 사용자"
                    android:tag="USER"
                    android:checkable="true"
                    android:layout_marginRight="40dp"
                                    android:backgroundTint="@color/category_button_bg"
                                    android:textColor="@color/category_button_text"
                                    app:strokeColor="@color/trust_blue_secondary"
                                    app:strokeWidth="1dp"/>


                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_user2"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="140dp"
                    android:layout_height="match_parent"
                    android:text="공공기관"
                    android:tag="OFFICIAL"
                                    android:backgroundTint="@color/category_button_bg"
                                    android:textColor="@color/category_button_text"
                                    app:strokeColor="@color/trust_blue_secondary"
                                    app:strokeWidth="1dp"
                    android:clickable="true"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="left">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="아이디"
                    android:textSize="@dimen/text_size_detail"
                    android:textColor="@color/trust_blue_text"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal">
                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/OutlinedTextBox"
                        android:layout_width="260dp"
                        app:boxBackgroundColor="@color/trust_blue_surface">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/login_user_id"
                            style="@style/OutlinedTextBoxInner" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <Button
                        android:id="@+id/btn_checkuser_id"
                        android:layout_width="90dp"
                        android:layout_height="60dp"
                        android:text="중복확인"
                        android:textSize="11dp"
                        android:layout_marginLeft="5dp"
                        android:backgroundTint="@color/trust_blue_primary"
                        android:textColor="@color/white"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="left">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="비밀번호"
                    android:textSize="@dimen/text_size_detail"
                    android:textColor="@color/trust_blue_text"/>
                <com.google.android.material.textfield.TextInputLayout
                    style="@style/OutlinedTextBox"
                    app:boxBackgroundColor="@color/trust_blue_surface">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/login_user_pw"
                        style="@style/OutlinedTextBoxInner"
                        android:inputType="textPassword"/>
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="left">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="이메일"
                    android:textSize="@dimen/text_size_detail"
                    android:textColor="@color/trust_blue_text"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal">
                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/OutlinedTextBox"
                        android:layout_width="260dp"
                        app:boxBackgroundColor="@color/trust_blue_surface">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/login_user_email"
                            style="@style/OutlinedTextBoxInner" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <Button
                        android:id="@+id/btn_checkuser_email"
                        android:layout_width="90dp"
                        android:layout_height="60dp"
                        android:text="중복확인"
                        android:textSize="11dp"
                        android:layout_marginLeft="5dp"
                        android:backgroundTint="@color/trust_blue_primary"
                        android:textColor="@color/white"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="left">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="이름"
                    android:textSize="@dimen/text_size_detail"
                    android:textColor="@color/trust_blue_text"/>
                <com.google.android.material.textfield.TextInputLayout
                    style="@style/OutlinedTextBox"
                    app:boxBackgroundColor="@color/trust_blue_surface">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/login_user_name"
                        style="@style/OutlinedTextBoxInner" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="left">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PH"
                    android:textSize="@dimen/text_size_detail"
                    android:textColor="@color/trust_blue_text"/>
                <com.google.android.material.textfield.TextInputLayout
                    style="@style/OutlinedTextBox"
                    app:boxBackgroundColor="@color/trust_blue_surface">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/login_user_ph"
                        style="@style/OutlinedTextBoxInner"
                        android:inputType="number"/>
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
    <include
        android:id="@+id/incJoinBar"
        layout="@layout/inc_join_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>