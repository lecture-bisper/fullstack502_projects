<?xml version="1.0" encoding="utf-8"?>


<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/trust_blue_background"
    android:id="@+id/main"
    android:theme="@style/ThemeOverlay.Pretendard">

    <!--상단 고정 뒤로가기 바 가져오기-->
    <include
        android:id="@+id/topBar"
        layout="@layout/inc_top_bar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!--  전체 스크롤뷰-->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollArea"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/topBar"
        app:layout_constraintVertical_bias="1.0">

        <!--    전체 스크롤 뷰 이하 전체 화면-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/full_layout_margin"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="마이페이지"
                        android:textSize="40dp"
                        android:textColor="@color/trust_blue_text"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="30dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_user1"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="140dp"
                        android:layout_height="match_parent"
                        android:backgroundTint="@color/category_button_bg"
                        android:tag="USER"
                        android:text="일반 사용자"
                        android:textColor="@color/category_button_text"
                        app:strokeColor="@color/trust_blue_secondary"
                        app:strokeWidth="1dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_user2"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="140dp"
                        android:layout_height="match_parent"
                        android:backgroundTint="@color/category_button_bg"
                        android:tag="OFFICIAL"
                        android:text="공공기관"
                        android:textColor="@color/category_button_text"
                        app:strokeColor="@color/trust_blue_secondary"
                        app:strokeWidth="1dp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="아이디"
                    android:textColor="@color/trust_blue_text"
                    android:textSize="@dimen/text_size_detail" />

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/OutlinedTextBox"
                    app:boxBackgroundColor="@color/trust_blue_surface">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/login_user_id"
                        style="@style/OutlinedTextBoxInner" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="비밀번호"
                    android:textColor="@color/trust_blue_text"
                    android:textSize="@dimen/text_size_detail" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal">

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/OutlinedTextBox"
                        android:layout_width="260dp"
                        app:boxBackgroundColor="@color/trust_blue_surface">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/login_user_Pw"
                            style="@style/OutlinedTextBoxInner" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <Button
                        android:id="@+id/change_pw_btn"
                        android:layout_width="90dp"
                        android:layout_height="60dp"
                        android:layout_marginLeft="5dp"
                        android:backgroundTint="@color/trust_blue_primary"
                        android:text="변경"
                        android:textSize="12dp"
                        android:textColor="@color/white"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="이메일"
                    android:textColor="@color/trust_blue_text"
                    android:textSize="@dimen/text_size_detail" />

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/OutlinedTextBox"
                    app:boxBackgroundColor="@color/trust_blue_surface">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/login_user_email"
                        style="@style/OutlinedTextBoxInner" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="이름"
                    android:textColor="@color/trust_blue_text"
                    android:textSize="@dimen/text_size_detail" />

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/OutlinedTextBox"
                    app:boxBackgroundColor="@color/trust_blue_surface">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/login_user_name"
                        style="@style/OutlinedTextBoxInner" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PH"
                    android:textColor="@color/trust_blue_text"
                    android:textSize="@dimen/text_size_detail" />

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/OutlinedTextBox"
                    app:boxBackgroundColor="@color/trust_blue_surface">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/login_user_ph"
                        style="@style/OutlinedTextBoxInner"
                        android:inputType="number" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <Button
                    android:id="@+id/logout_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"

                    android:backgroundTint="@color/trust_blue_background"
                    android:text="로그아웃"
                    android:textColor="@color/trust_blue_primary"
                    app:strokeColor="@color/trust_blue_primary"
                    app:strokeWidth="3dp" />

                <Button

                    android:id="@+id/delete_user_btn"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:backgroundTint="@color/trust_blue_background"
                    android:text="회원탈퇴"
                    android:textColor="@color/app_error"
                    app:strokeColor="@color/app_error"
                    app:strokeWidth="2dp" />
            </LinearLayout>

        </LinearLayout>


    </androidx.core.widget.NestedScrollView>

    <include
        layout="@layout/inc_login_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>

