<manifest xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools">

    <!-- 외부 앱 호출 (Tmap 관련) -->
    <queries>
        <package android:name="com.skt.tmap.ku" />
        <package android:name="com.skt.skaf.l001mtm091" />
    </queries>

    <!-- 권한 설정 -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <!-- 하드웨어 기능 -->
    <uses-feature
            android:name="android.hardware.camera"
            android:required="false" />

    <application
            android:allowBackup="true"
            android:dataExtractionRules="@xml/data_extraction_rules"
            android:fullBackupContent="@xml/backup_rules"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:networkSecurityConfig="@xml/network_security_config"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/Base.Theme.Final_Project_Team1"
            android:usesCleartextTraffic="true">

        <!-- 네이버맵 인증키 -->
        <meta-data
                android:name="com.naver.maps.map.NCP_KEY_ID"
                android:value="eeh71qt74n" />

        <!-- 메인 액티비티 -->
        <activity
                android:name=".MainActivity"
                android:launchMode="singleTask"
                android:exported="false" />

        <!-- IntroActivity (앱 실행 시 최초 화면) -->
        <activity
                android:name=".ui.intro.IntroActivity"
                android:exported="true"
                android:theme="@style/Theme.App.Starting">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>


        <!-- 지도/AR/경로/리스트 등 -->
        <activity
                android:name=".ui.surveyList.ArActivity"
                android:screenOrientation="portrait" />
        <activity android:name=".ui.surveyList.FullMapActivity" />
        <activity android:name=".ui.surveyList.SurveyListActivity" />

        <!-- 카테고리/상태 -->
        <activity android:name=".ui.surveyList.ReinspectListActivity" />

        <!-- 조사 입력 화면 -->
        <activity android:name=".ui.SurveyActivity" />

        <activity android:name=".ui.transmission.EditActivity" />

        <provider
                android:name="androidx.core.content.FileProvider"
                android:authorities="${applicationId}.fileprovider"
                android:exported="false"
                android:grantUriPermissions="true">
            <meta-data
                    android:name="android.support.FILE_PROVIDER_PATHS"
                    android:resource="@xml/file_paths" />
        </provider>

        <!-- 로그인 화면 -->
        <activity android:name=".ui.login.LoginActivity" />

        <!-- 전송완료 페이지 -->
        <activity android:name=".ui.transmission.TransmissionCompleteActivity" />

        <!-- ✅ 미전송 내역 (데이터 전송 페이지) -->
        <activity android:name=".ui.transmission.DataTransmissionActivity" />

        <!-- 메시지 보관함 화면 -->
        <activity android:name=".ui.message.MessageInboxActivity" />


    </application>
</manifest>