<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:background="@android:color/white">

    <LinearLayout
            android:id="@+id/layoutTempActions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:visibility="gone"
            android:paddingBottom="8dp">

        <Button
                android:id="@+id/btnEditResult"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="결과 수정"
                android:backgroundTint="@android:color/white"
                android:textColor="#3366FF"
                android:paddingHorizontal="16dp"
                android:stateListAnimator="@null"/>

        <Space
                android:layout_width="8dp"
                android:layout_height="1dp"/>

        <Button
                android:id="@+id/btnSubmitResult"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="결과 전송"
                android:textColor="@android:color/white"
                android:backgroundTint="#1F2D3D"
                android:paddingHorizontal="16dp"/>
    </LinearLayout>

    <Button
            android:id="@+id/btnStartSurvey"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="조사시작"
            android:layout_marginTop="8dp"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton" />



    <!-- ✅ 조사 거절 버튼 -->
    <Button
            android:id="@+id/btnRejectSurvey"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="조사거절"
            android:textColor="#F65D5D"
            android:layout_marginTop="8dp"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

    <TextView
            android:id="@+id/tvRejectReason"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:padding="0dp"
            android:text=""
            android:textColor="#B00020"
            android:textStyle="bold"
            android:visibility="visible"
            android:paddingBottom="4dp" />

    <!-- 건물/결과 정보 -->
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp">

        <LinearLayout
                android:id="@+id/infoContainer"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
    </ScrollView>
</LinearLayout>
