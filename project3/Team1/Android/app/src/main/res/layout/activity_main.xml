<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_light_gray">

    <!-- 헤더 -->
    <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="0dp"
            android:layout_height="65dp"
            android:paddingTop="5dp"
            android:background="@drawable/toolbar_background"
            app:menu="@menu/menu_main"
            app:theme="@style/ThemeOverlay.MyToolbar"
            app:titleTextColor="@android:color/white"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    <!-- 본문 (툴바 아래 ~ 탭 위) -->
    <ScrollView
            android:id="@+id/scroll"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:fillViewport="true"
            android:padding="20dp"
            app:layout_constraintTop_toBottomOf="@id/toolbar"
            app:layout_constraintBottom_toTopOf="@id/bottomNav"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <!-- 조사원 현황 카드 -->
            <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardSurveyor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:backgroundTint="@android:color/white"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="6dp"
                    app:strokeColor="#E8E8E8"
                    app:strokeWidth="1dp">



                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="활동현황"
                            android:layout_marginBottom="10dp"
                            android:textColor="@color/text_primary"
                            android:textSize="17sp"
                            android:textStyle="bold" />


                    <!-- 조사원 정보 -->
                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="20dp">

                        <LinearLayout
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:background="@drawable/circle_background"
                                android:gravity="center"
                                android:layout_marginEnd="16dp">

                            <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:src="@drawable/ic_person"
                                    app:tint="@color/primary_blue" />
                        </LinearLayout>

                        <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                            <TextView
                                    android:id="@+id/tvUserName"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="조사원 이름"
                                    android:textColor="@color/text_primary"
                                    android:textSize="17sp"
                                    android:textStyle="bold" />

                            <TextView
                                    android:id="@+id/tvEmpNo"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="4dp"
                                    android:text="사번 : -"
                                    android:textColor="@color/text_secondary"
                                    android:textSize="12sp" />

                        </LinearLayout>
                    </LinearLayout>

                    <!-- 통계 정보 -->
                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="3">

                        <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:padding="12dp"
                                android:background="@drawable/rounded_border">

                            <TextView
                                    android:id="@+id/tvProgress"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="-%"
                                    android:textColor="@color/primary_blue"
                                    android:textSize="16sp"
                                    android:textStyle="bold" />

                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="4dp"
                                    android:text="진행률"
                                    android:textColor="@color/text_secondary"
                                    android:textSize="12sp" />
                        </LinearLayout>

                        <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:padding="12dp"
                                android:layout_marginHorizontal="8dp"
                                android:background="@drawable/rounded_border">

                            <TextView
                                    android:id="@+id/tvTotalCount"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="-"
                                    android:textColor="@color/text_primary"
                                    android:textSize="16sp"
                                    android:textStyle="bold" />

                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="4dp"
                                    android:text="총 건수"
                                    android:textColor="@color/text_secondary"
                                    android:textSize="12sp" />
                        </LinearLayout>

                        <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:padding="12dp"
                                android:background="@drawable/rounded_border">

                            <TextView
                                    android:id="@+id/tvTodayCount"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="-"
                                    android:textColor="@color/green"
                                    android:textSize="16sp"
                                    android:textStyle="bold" />

                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="4dp"
                                    android:text="금일 완료"
                                    android:textColor="@color/text_secondary"
                                    android:textSize="12sp" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- 🔁 바로가기 2×2 그리드 -->
            <androidx.gridlayout.widget.GridLayout
                    android:id="@+id/shortcutGrid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:columnCount="2"
                    app:alignmentMode="alignMargins"
                    android:clipToPadding="false"
                    android:clipChildren="false">

                <!-- 1. 조사 예정 (id/텍스트/색 유지) -->
                <com.google.android.material.card.MaterialCardView
                        android:id="@+id/btnSurveyList"
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        app:layout_column="0"
                        app:layout_row="0"
                        app:layout_columnWeight="1"
                        app:cardBackgroundColor="#CBDCFF"
                        app:cardCornerRadius="30dp"
                        app:cardElevation="0dp"
                        app:cardUseCompatPadding="true"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackground">

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:gravity="center"
                            android:padding="0dp">



                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="조사예정"
                                android:textColor="#002566"
                                android:textStyle="bold"
                                android:textSize="16sp"/>
                        <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_list_24"
                                app:tint="#002566"
                                android:layout_marginStart="8dp"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- 2. 카메라 (id/텍스트/색/onClick 유지) -->
                <com.google.android.material.card.MaterialCardView
                        android:id="@+id/btnMainCamera"
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        app:layout_column="1"
                        app:layout_row="0"
                        app:layout_columnWeight="1"
                        app:cardBackgroundColor="#FFFFFF"
                        app:cardCornerRadius="30dp"
                        app:cardElevation="0dp"
                        app:cardUseCompatPadding="true"
                        android:clickable="true"
                        android:focusable="true"
                        android:onClick="onMainCameraClick"
                        android:foreground="?attr/selectableItemBackground">

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:gravity="center"
                            android:padding="0dp">

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="카메라"
                                android:textColor="#002566"
                                android:textStyle="bold"
                                android:textSize="16sp"/>

                        <ImageView
                                android:layout_width="26dp"
                                android:layout_height="26dp"
                                android:src="@drawable/baseline_camera_alt_24"
                                app:tint="#002566"
                                android:layout_marginStart="8dp"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- 3. 재조사 (id/텍스트/색 유지) -->
                <com.google.android.material.card.MaterialCardView
                        android:id="@+id/btnReinspectShortcut"
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        app:layout_column="0"
                        app:layout_row="1"
                        app:layout_columnWeight="1"
                        app:cardBackgroundColor="#FFFFFF"
                        app:cardCornerRadius="30dp"
                        app:cardElevation="0dp"
                        app:cardUseCompatPadding="true"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackground">

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:gravity="center"
                            android:padding="0dp">

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="재조사"
                                android:textColor="#002566"
                                android:textStyle="bold"
                                android:textSize="16sp"/>
                        <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_repeat_24"
                                app:tint="#002566"
                                android:layout_marginStart="8dp"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- 4. 미전송 (id/텍스트/색 유지) -->
                <com.google.android.material.card.MaterialCardView
                        android:id="@+id/btnNotTransmittedShortcut"
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        app:layout_column="1"
                        app:layout_row="1"
                        app:layout_columnWeight="1"
                        app:cardBackgroundColor="#CBDCFF"
                        app:cardCornerRadius="30dp"
                        app:cardElevation="0dp"
                        app:cardUseCompatPadding="true"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackground">

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:gravity="center"
                            android:padding="0dp">

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="미전송"
                                android:textColor="#002566"
                                android:textStyle="bold"
                                android:textSize="16sp"/>

                        <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_upload_24"
                                app:tint="#002566"
                                android:layout_marginStart="8dp"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

            </androidx.gridlayout.widget.GridLayout>


            <!-- ✅ 조사현황 대시보드 -->
            <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardDashboard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@android:color/white"
                    android:layout_marginBottom="50dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="6dp"
                    app:strokeColor="#E8E8E8"
                    app:strokeWidth="1dp">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp">

                    <!-- 헤더 -->
                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="16dp">

                        <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="조사현황"
                                android:textColor="@color/text_primary"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                        <TextView
                                android:id="@+id/tvDetail"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="전송내역 보기 →"
                                android:textColor="@color/primary_blue"
                                android:textSize="14sp"
                                android:background="?attr/selectableItemBackgroundBorderless"
                                android:clickable="true"
                                android:focusable="true"
                                android:padding="8dp" />
                    </LinearLayout>

                    <!-- 그래프 영역 -->
                    <LinearLayout
                            android:id="@+id/dashboardContainer"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="3"
                            android:gravity="center_horizontal"
                            android:padding="8dp">

                        <!-- 조사 진행 -->
                        <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:gravity="center_horizontal">

                            <FrameLayout
                                    android:layout_width="32dp"
                                    android:layout_height="100dp"
                                    android:layout_marginBottom="4dp">

                                <!-- 회색 배경 -->
                                <View
                                        android:id="@+id/barInProgressBg"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:background="@drawable/bar_gray" />

                                <!-- 파랑 bar -->
                                <View
                                        android:id="@+id/barInProgress"
                                        android:layout_width="match_parent"
                                        android:layout_height="0dp"
                                        android:layout_gravity="bottom"
                                        android:background="@drawable/bar_blue" />
                            </FrameLayout>

                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="조사 진행 중"
                                    android:textSize="12sp"
                                    android:textColor="@color/text_secondary" />

                            <TextView
                                    android:id="@+id/tvInProgressCount"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0건"
                                    android:textColor="@color/primary_blue"
                                    android:textStyle="bold"
                                    android:textSize="12sp" />
                        </LinearLayout>

                        <!-- 결재 대기 -->
                        <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:gravity="center_horizontal">

                            <FrameLayout
                                    android:layout_width="32dp"
                                    android:layout_height="100dp"
                                    android:layout_marginBottom="4dp">

                                <!-- 회색 배경 -->
                                <View
                                        android:id="@+id/barWaitingBg"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:background="@drawable/bar_gray" />

                                <!-- 주황 bar -->
                                <View
                                        android:id="@+id/barWaiting"
                                        android:layout_width="match_parent"
                                        android:layout_height="0dp"
                                        android:layout_gravity="bottom"
                                        android:background="@drawable/bar_orange" />
                            </FrameLayout>

                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="결재 대기"
                                    android:textSize="12sp"
                                    android:textColor="@color/text_secondary" />

                            <TextView
                                    android:id="@+id/tvWaitingCount"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0건"
                                    android:textColor="@color/orange"
                                    android:textStyle="bold"
                                    android:textSize="12sp" />
                        </LinearLayout>

                        <!-- 결재 완료 -->
                        <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:gravity="center_horizontal">

                            <FrameLayout
                                    android:layout_width="32dp"
                                    android:layout_height="100dp"
                                    android:layout_marginBottom="4dp">

                                <!-- 회색 배경 -->
                                <View
                                        android:id="@+id/barApprovedBg"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:background="@drawable/bar_gray" />

                                <!-- 초록 bar -->
                                <View
                                        android:id="@+id/barApproved"
                                        android:layout_width="match_parent"
                                        android:layout_height="0dp"
                                        android:layout_gravity="bottom"
                                        android:background="@drawable/bar_green" />
                            </FrameLayout>

                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="결재 완료"
                                    android:textSize="12sp"
                                    android:textColor="@color/text_secondary" />

                            <TextView
                                    android:id="@+id/tvApprovedCount"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0건"
                                    android:textColor="@color/green"
                                    android:textStyle="bold"
                                    android:textSize="12sp" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>


        </LinearLayout>
    </ScrollView>
    <!-- ✅ 하단 고정 탭 -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottomNav"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:elevation="8dp"
            app:menu="@menu/menu_bottom_nav"
            app:labelVisibilityMode="labeled"
            app:itemIconSize="24dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
