<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <!-- 배경 이미지 -->
    <ImageView
            android:id="@+id/editImageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitCenter" />

    <!-- 그림 그리는 뷰 -->
    <bitc.fullstack502.final_project_team1.ui.transmission.DrawingView
            android:id="@+id/drawingView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent" />

    <!-- 하단 툴바 -->
    <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:padding="15dp"
            android:background="#AAFFFFFF">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginVertical="8dp">

            <!-- 색상 팔레트 -->
            <ImageButton
                    android:id="@+id/redButton"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/color_red"
                    android:contentDescription="빨강" />

            <ImageButton
                    android:id="@+id/blueButton"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="5dp"
                    android:background="@drawable/color_blue"
                    android:contentDescription="파랑" />

            <ImageButton
                    android:id="@+id/greenButton"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="5dp"
                    android:background="@drawable/color_green"
                    android:contentDescription="초록" />

            <!-- 브러시 -->
            <ImageButton
                    android:id="@+id/brushButton"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="5dp"
                    android:src="@drawable/outline_brush_24"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="브러쉬" />

            <!-- 도형 -->
            <ImageButton
                    android:id="@+id/shapeButton"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="5dp"
                    android:src="@drawable/outline_check_box_outline_blank_24"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="도형" />

            <!-- 지우개 -->
            <ImageButton
                    android:id="@+id/eraserButton"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="5dp"
                    android:src="@drawable/ic_eraser"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="지우개" />

            <!-- 초기화 -->
            <ImageButton
                    android:id="@+id/clearButton"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="5dp"
                    android:src="@drawable/ic_clear"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="초기화" />

            <!-- 저장 -->
            <ImageButton
                    android:id="@+id/saveButton"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/twotone_check_24"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="저장" />

        </LinearLayout>
    </HorizontalScrollView>

</FrameLayout>
