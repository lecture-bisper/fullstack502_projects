<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OrderActivity"
    android:background="@color/white"
    android:orientation="vertical">

    <include
        layout="@layout/top_bar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/top_bar_container"
        app:layout_constraintTop_toTopOf="parent"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/top_bar_container"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="주문 등록"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="28sp"
            android:layout_marginStart="2dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:padding="2dp">

            <EditText
                android:id="@+id/etPdNum"
                android:layout_width="185dp"
                android:layout_height="30dp"
                android:hint="품번을 입력하세요"
                android:textSize="12sp"
                android:background="@drawable/edit_text_bg"/>
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

            <EditText
                android:id="@+id/etPdProducts"
                android:layout_width="185dp"
                android:layout_height="30dp"
                android:hint="제품명을 입력하세요"
                android:textSize="12sp"
                android:background="@drawable/edit_text_bg"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="30dp">

            <TextView
                android:id="@+id/tvSearchCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="검색 된 제품 (0개)"/>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/table_cell_bg"
                        android:orientation="horizontal">

                        <CheckBox
                            android:id="@+id/cbCheckAll"
                            android:layout_width="50dp"
                            android:layout_height="35dp"
                            android:background="@drawable/right_border" />

                        <TextView
                            android:layout_width="150dp"
                            android:layout_height="35dp"
                            android:background="@drawable/right_border"
                            android:gravity="center"
                            android:paddingStart="30dp"
                            android:paddingEnd="30dp"
                            android:text="품번"
                            android:textAlignment="center" />

                        <TextView
                            android:layout_width="300dp"
                            android:layout_height="35dp"
                            android:background="@drawable/right_border"
                            android:gravity="center"
                            android:paddingStart="60dp"
                            android:paddingEnd="60dp"
                            android:text="제품명"
                            android:textAlignment="center" />

                        <TextView
                            android:layout_width="150dp"
                            android:layout_height="35dp"
                            android:background="@drawable/right_border"
                            android:gravity="center"
                            android:paddingStart="30dp"
                            android:paddingEnd="30dp"
                            android:text="수량"
                            android:textAlignment="center" />

                        <TextView
                            android:layout_width="150dp"
                            android:layout_height="35dp"
                            android:background="@drawable/right_border"
                            android:gravity="center"
                            android:paddingStart="30dp"
                            android:paddingEnd="30dp"
                            android:text="단가"
                            android:textAlignment="center" />

                        <TextView
                            android:layout_width="150dp"
                            android:layout_height="35dp"
                            android:background="@drawable/bottom_border"
                            android:gravity="center"
                            android:paddingStart="30dp"
                            android:paddingEnd="30dp"
                            android:text="총액"
                            android:textAlignment="center" />
                    </LinearLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"/>
                </LinearLayout>
            </HorizontalScrollView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="30dp">

            <TextView
                android:id="@+id/tvSelectedCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="선택 된 제품 (0개)"/>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/table_cell_bg"
                    android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/cbSelectedAll"
                        android:layout_width="50dp"
                        android:layout_height="35dp"
                        android:background="@drawable/right_border" />

                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="35dp"
                        android:background="@drawable/right_border"
                        android:gravity="center"
                        android:paddingStart="30dp"
                        android:paddingEnd="30dp"
                        android:text="품번"
                        android:textAlignment="center" />

                    <TextView
                        android:layout_width="300dp"
                        android:layout_height="35dp"
                        android:background="@drawable/right_border"
                        android:gravity="center"
                        android:paddingStart="60dp"
                        android:paddingEnd="60dp"
                        android:text="제품명"
                        android:textAlignment="center" />

                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="35dp"
                        android:background="@drawable/right_border"
                        android:gravity="center"
                        android:paddingStart="30dp"
                        android:paddingEnd="30dp"
                        android:text="수량"
                        android:textAlignment="center" />

                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="35dp"
                        android:background="@drawable/right_border"
                        android:gravity="center"
                        android:paddingStart="30dp"
                        android:paddingEnd="30dp"
                        android:text="단가"
                        android:textAlignment="center" />

                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="35dp"
                        android:background="@drawable/bottom_border"
                        android:gravity="center"
                        android:paddingStart="30dp"
                        android:paddingEnd="30dp"
                        android:text="총액"
                        android:textAlignment="center" />
                </LinearLayout>
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/selectedRecyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"/>
                </LinearLayout>
            </HorizontalScrollView>
        </LinearLayout>

            <android.widget.Button
                android:id="@+id/btnRegister"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_bg"
                android:text="등록"
                android:textColor="@color/white"
                android:layout_marginTop="50dp"/>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>