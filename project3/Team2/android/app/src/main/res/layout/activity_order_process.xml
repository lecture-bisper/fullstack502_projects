<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OrderProcessActivity"
    android:background="@color/white"
    android:orientation="vertical">

    <include
        layout="@layout/top_bar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/top_bar_container"
        app:layout_constraintTop_toTopOf="parent"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/top_bar_container"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        android:padding="12dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="주문 현황"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="28sp"
            android:layout_marginStart="2dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:padding="2dp">

            <EditText
                android:id="@+id/editTextOrderDate"
                android:layout_width="185dp"
                android:layout_height="30dp"
                android:hint="주문일을 입력해주세요"
                android:textSize="12sp"
                android:background="@drawable/edit_text_bg"
                android:focusable="false"
                android:clickable="true"
                android:layout_marginTop="-1dp"/>

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

            <Spinner
                android:id="@+id/spinnerStatus"
                android:layout_width="185dp"
                android:layout_height="30dp"
                android:background="@drawable/edit_text_bg"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:spinnerMode="dropdown"
                android:textSize="12sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:padding="2dp">

            <EditText
                android:id="@+id/editTextOrderNumber"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:hint="주문번호를 입력하세요"
                android:textSize="12sp"
                android:background="@drawable/edit_text_bg"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="30dp">

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/table_cell_bg"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="150dp"
                            android:layout_height="35dp"
                            android:background="@drawable/right_border"
                            android:gravity="center"
                            android:paddingStart="30dp"
                            android:paddingEnd="30dp"
                            android:text="주문일"
                            android:textAlignment="center" />

                        <TextView
                            android:layout_width="300dp"
                            android:layout_height="35dp"
                            android:background="@drawable/right_border"
                            android:gravity="center"
                            android:paddingStart="60dp"
                            android:paddingEnd="60dp"
                            android:text="주문번호"
                            android:textAlignment="center" />

                        <TextView
                            android:layout_width="150dp"
                            android:layout_height="35dp"
                            android:background="@drawable/right_border"
                            android:gravity="center"
                            android:paddingStart="30dp"
                            android:paddingEnd="30dp"
                            android:text="처리 상태"
                            android:textAlignment="center" />

                        <TextView
                            android:layout_width="150dp"
                            android:layout_height="35dp"
                            android:background="@drawable/right_border"
                            android:gravity="center"
                            android:paddingStart="30dp"
                            android:paddingEnd="30dp"
                            android:text="도착 예정일"
                            android:textAlignment="center" />

                        <TextView
                            android:layout_width="150dp"
                            android:layout_height="35dp"
                            android:background="@drawable/right_border"
                            android:gravity="center"
                            android:paddingStart="30dp"
                            android:paddingEnd="30dp"
                            android:text="배송기사"
                            android:textAlignment="center" />

                        <TextView
                            android:layout_width="200dp"
                            android:layout_height="35dp"
                            android:background="@drawable/right_border"
                            android:gravity="center"
                            android:paddingStart="30dp"
                            android:paddingEnd="30dp"
                            android:text="배송기사 전화번호"
                            android:singleLine="true"
                            android:textAlignment="center" />

                        <TextView
                            android:layout_width="150dp"
                            android:layout_height="35dp"
                            android:background="@drawable/bottom_border"
                            android:gravity="center"
                            android:paddingStart="30dp"
                            android:paddingEnd="30dp"
                            android:text="총액"
                            android:textAlignment="center" />
                    </LinearLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="400dp" />
                </LinearLayout>
            </HorizontalScrollView>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>