<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!-- 전체 콘텐츠 영역 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <!--            상단 navbar-->
            <!--메인 콘텐츠 영역-->
            <LinearLayout
                android:id="@+id/top_controls"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_gravity="top|start"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingHorizontal="10dp">
                <!-- 메뉴버튼 -->
                <ImageButton
                    android:id="@+id/menu_btn"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/hamburger" />

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="57dp"
                    android:layout_marginLeft="110dp"
                    android:src="@drawable/bq"
                    app:layout_anchor="@+id/top_controls"
                    app:layout_anchorGravity="center"
                    app:tint="@color/blue" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/blue"
                android:orientation="vertical"
                android:gravity="center_horizontal">
                <!--메인 콘텐츠 '비품관리시스템' 텍스트-->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:text="비품 관리 시스템"
                    android:textSize="41sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:layout_marginBottom="40dp"/>
                <!--메인 콘텐츠 버튼 영역-->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/btn_warning_list"
                        android:layout_width="227dp"
                        android:layout_height="70dp"
                        android:background="@drawable/bg_red_rounded"
                        android:elevation="8dp"
                        android:clipToOutline="true"
                        android:gravity="center"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackground"
                        android:contentDescription="재고 경고 목록 버튼">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="재고 경고 목록"
                        android:textSize="26sp"
                        android:textStyle="bold"
                        android:textColor="@color/white"/>
                </LinearLayout>

                <LinearLayout
                        android:id="@+id/btn_item_in"
                        android:layout_width="227dp"
                        android:layout_height="70dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/bg_white_rounded"
                        android:elevation="8dp"
                        android:clipToOutline="true"
                        android:gravity="center"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackground"
                        android:contentDescription="비품 입고 버튼">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="비품 입고"
                        android:textSize="26sp"
                        android:textStyle="bold"
                        android:textColor="@color/blue2"/>
                </LinearLayout>


                <LinearLayout
                        android:id="@+id/btn_item_out"
                        android:layout_width="227dp"
                        android:layout_height="70dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/bg_white_rounded"
                        android:elevation="8dp"
                        android:clipToOutline="true"
                        android:gravity="center"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackground"
                        android:contentDescription="비품 출고 버튼">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="비품 출고"
                        android:textSize="26sp"
                        android:textStyle="bold"
                        android:textColor="@color/blue2"/>
                </LinearLayout>


                    <LinearLayout
                        android:id="@+id/btn_item_list"
                        android:layout_width="227dp"
                        android:layout_height="70dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/bg_gray_rounded"
                        android:elevation="8dp"
                        android:clipToOutline="true"
                        android:gravity="center"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackground"
                        android:contentDescription="비품 목록 조회 버튼">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="비품 목록 조회"
                        android:textSize="26sp"
                        android:textStyle="bold"
                        android:textColor="@color/darkgray"/>
                </LinearLayout>

                    <LinearLayout
                        android:id="@+id/btn_my_list"
                        android:layout_width="227dp"
                        android:layout_height="70dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/bg_gray_rounded"
                        android:elevation="8dp"
                        android:clipToOutline="true"
                        android:gravity="center"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackground"
                        android:contentDescription="비품 목록 조회 버튼">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="나의 출고 내역"
                            android:textSize="26sp"
                            android:textStyle="bold"
                            android:textColor="@color/darkgray"/>
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
    <!-- 네비게이션 드로어 메뉴 -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:menu="@menu/drawer_menu" />
</androidx.drawerlayout.widget.DrawerLayout>
