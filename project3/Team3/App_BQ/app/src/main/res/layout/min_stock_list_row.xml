<?xml version="1.0" encoding="utf-8"?>
<HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/bg_ediitext_rounded3">

        <TextView
            android:id="@+id/item_idx"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:paddingHorizontal="10dp"
            android:text="item_idx"
            android:textSize="20sp"
            android:gravity="center" />
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/black"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingHorizontal="5dp">
            <LinearLayout
                android:id="@+id/min_stock_out_btn"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:background="@drawable/bg_red_rounded"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="발주"
                    android:textColor="@color/white"
                    android:textStyle="bold"/>
            </LinearLayout>
        </LinearLayout>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/black"/>
        <TextView
            android:id="@+id/item_name"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:paddingHorizontal="10dp"
            android:text="item_name"
            android:textSize="20sp"
            android:gravity="center"/>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/black"/>
        <TextView
            android:id="@+id/item_code"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:paddingHorizontal="10dp"
            android:text="item_code"
            android:textSize="20sp"
            android:gravity="center"/>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/black"/>
        <TextView
            android:id="@+id/item_manufacturer"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:paddingHorizontal="10dp"
            android:text="item_manufacturer"
            android:textSize="20sp"
            android:gravity="center"/>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/black"/>
        <TextView
            android:id="@+id/item_categoryId"
            android:layout_width="190dp"
            android:layout_height="match_parent"
            android:paddingHorizontal="10dp"
            android:text="item_categoryId"
            android:textSize="20sp"
            android:gravity="center"/>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/black"/>
        <TextView
            android:id="@+id/savecount"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:paddingHorizontal="10dp"
            android:text="300/299"
            android:textSize="20sp"
            android:gravity="center"/>
    </LinearLayout>
</HorizontalScrollView>
