<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <!-- 전체 콘텐츠 영역 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <!--            상단 navbar-->
            <LinearLayout
                android:id="@+id/top_controls"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_gravity="top|start"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingHorizontal="10dp">
                <!-- 메뉴버튼 -->
                <ImageButton
                    android:id="@+id/menu_btn"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/hamburger" />

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="57dp"
                    android:layout_marginLeft="110dp"
                    android:src="@drawable/bq"
                    app:layout_anchor="@+id/top_controls"
                    app:layout_anchorGravity="center"
                    app:tint="@color/blue" />
            </LinearLayout>
            <!--메인 콘텐츠 영역-->
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/blue"
                android:gravity="center_horizontal"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="14dp"
                    android:background="@drawable/bg_white_rounded"
                    android:clipToOutline="true"
                    android:elevation="8dp"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/stock_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:layout_marginBottom="30dp"
                        android:text="입고등록"
                        android:textColor="@color/blue2"
                        android:textSize="41sp"
                        android:textStyle="bold" />

                    <!-- 창고 QR -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginTop="8dp"
                        android:baselineAligned="true"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingHorizontal="20dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="창고 QR"
                            android:textColor="@color/black"
                            android:textSize="20sp" />

                        <!-- 왼쪽 텍스트와 오른쪽 아이콘 사이를 밀어주는 공간 -->
                        <Space
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="1" />

                        <LinearLayout
                            android:id="@+id/btn_scan_stock"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:background="@drawable/bg_blue2_rounded"
                            android:visibility="visible">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="6dp"
                                android:text="QR스캔하기"
                                android:textColor="@color/white"
                                android:textSize="16sp" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/scanned_stock_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="6dp"
                            android:text="스캔된 창고 이름"
                            android:textSize="16sp"
                            android:visibility="gone" />
                    </LinearLayout>

                    <!-- 비품 QR -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginTop="8dp"
                        android:baselineAligned="true"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingHorizontal="20dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="비품 QR"
                            android:textColor="@color/black"
                            android:textSize="20sp" />

                        <!-- 왼쪽 텍스트와 오른쪽 아이콘 사이를 밀어주는 공간 -->
                        <Space
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="1" />

                        <LinearLayout
                            android:id="@+id/btn_scan_item"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_blue2_rounded">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="6dp"
                                android:text="QR스캔하기"
                                android:textColor="@color/white"
                                android:textSize="16sp"
                                android:visibility="visible"/>
                        </LinearLayout>

                        <TextView
                            android:id="@+id/scanned_item_code"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="6dp"
                            android:text="스캔된 비품 코드"
                            android:textSize="16sp"
                            android:visibility="gone" />
                    </LinearLayout>

                    <!--                    비품명-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginTop="8dp"
                        android:baselineAligned="true"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingHorizontal="20dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="비품명"
                            android:textColor="@color/black"
                            android:textSize="20sp" />

                        <Space
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="1" />

                        <TextView
                            android:id="@+id/scanned_item_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="6dp"
                            android:text="스캔된 비품 이름"
                            android:textSize="16sp" />
                    </LinearLayout>
                    <!--                    제조사-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginTop="8dp"
                        android:baselineAligned="true"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingHorizontal="20dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="제조사"
                            android:textColor="@color/black"
                            android:textSize="20sp" />

                        <Space
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="1" />

                        <TextView
                            android:id="@+id/scanned_item_corper"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="6dp"
                            android:text="스캔된 비품 제조사"
                            android:textSize="16sp" />
                    </LinearLayout>
                    <!--                    종류-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginTop="8dp"
                        android:baselineAligned="true"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingHorizontal="20dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="종류"
                            android:textColor="@color/black"
                            android:textSize="20sp" />

                        <Space
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="1" />

                        <TextView
                            android:id="@+id/scanned_item_category"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="6dp"
                            android:text="스캔된 비품 종류"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginTop="8dp"
                        android:baselineAligned="true"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingHorizontal="20dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="개수"
                            android:textColor="@color/black"
                            android:textSize="20sp" />

                        <Space
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="1" />

                        <EditText
                            android:id="@+id/et_quantity"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_edittext_rounded"
                            android:hint="처리할 비품 개수 입력"
                            android:padding="8dp"
                            android:textColor="@color/black"
                            android:textSize="18sp"
                            android:inputType="number"
                            android:digits="0123456789"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginTop="8dp"
                        android:baselineAligned="true"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingHorizontal="20dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="비고"
                            android:textColor="@color/black"
                            android:textSize="20sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginTop="4dp"
                        android:baselineAligned="true"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingHorizontal="20dp">

                        <EditText
                            android:id="@+id/et_remark"
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:background="@drawable/bg_edittext_rounded"
                            android:hint="내용을 입력하세요."
                            android:padding="8dp"
                            android:textColor="@color/black"
                            android:textSize="18sp" />
                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/btn_regist_stock"
                        android:layout_width="190dp"
                        android:layout_height="50dp"
                        android:layout_marginTop="80dp"
                        android:background="@drawable/bg_blue2_rounded"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackground"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/stock_btn_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="입고 등록하기"
                            android:textColor="@color/white"
                            android:textSize="24sp"
                            android:textStyle="normal" />
                    </LinearLayout>
                </LinearLayout>
            </ScrollView>
        </LinearLayout>
            <!-- QR 스캔 위한 프리뷰 -->
            <FrameLayout
                android:id="@+id/scan_frame"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <!-- 1) 카메라 프리뷰: 맨 아래 -->
                <androidx.camera.view.PreviewView
                    android:id="@+id/cameraPreview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <!-- 2) 중앙 박스만 투명한 오버레이 (커스텀 View) -->
                <bitc.full502.app_bq.ui.ScanOverlay
                    android:id="@+id/scanOverlay"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <!-- 3) 안내 텍스트 등 -->
                <TextView
                    android:id="@+id/scan_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="창고 QR을 스캔하세요"
                    android:layout_gravity="center_horizontal"
                    android:textSize="32sp"
                    android:background="@color/white"
                    android:padding="12dp"
                    android:alpha="0.5"
                    android:layout_marginTop="16dp"/>
            </FrameLayout>


        </FrameLayout>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
    <!-- 네비게이션 드로어 메뉴 -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:menu="@menu/drawer_menu" />
</androidx.drawerlayout.widget.DrawerLayout>
