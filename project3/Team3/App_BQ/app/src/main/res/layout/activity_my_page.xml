<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!-- 전체 콘텐츠 영역 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <!--            상단 navbar-->
            <LinearLayout
                android:id="@+id/top_controls"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_gravity="top|start"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingHorizontal="10dp">
                <!-- 메뉴버튼 -->
                <ImageButton
                    android:id="@+id/menu_btn"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/hamburger" />

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="57dp"
                    android:layout_marginLeft="110dp"
                    android:src="@drawable/bq"
                    app:layout_anchor="@+id/top_controls"
                    app:layout_anchorGravity="center"
                    app:tint="@color/blue" />
            </LinearLayout>
            <!--메인 콘텐츠 영역-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/blue"
                android:gravity="center_horizontal"
                android:orientation="vertical">
                <!--메인 콘텐츠 마이페이지 박스-->
                <LinearLayout
                    android:id="@+id/mypageBox"
                    android:layout_width="350dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/bg_white_rounded"
                    android:clipToOutline="true"
                    android:elevation="8dp"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="마이페이지"
                        android:textColor="@color/blue2"
                        android:textSize="41sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:orientation="vertical"
                        android:layout_marginHorizontal="60dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="사원번호"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/user_Id"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:layout_marginTop="3dp"
                            android:background="@drawable/bg_edittext_rounded2"
                            android:textColor="@color/black"
                            android:textSize="18sp"
                            android:enabled="false"
                            android:paddingLeft="10dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="vertical"
                        android:layout_marginHorizontal="60dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="비밀번호"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            >
                            <EditText
                                android:id="@+id/user_Pw"
                                android:layout_width="180dp"
                                android:layout_height="30dp"
                                android:background="@drawable/bg_edittext_rounded2"
                                android:textColor="@color/black"
                                android:textSize="18sp"
                                android:enabled="false"
                                android:paddingLeft="10dp"/>
                            <LinearLayout
                                android:id="@+id/user_Pw_reset"
                                android:layout_marginLeft="8dp"
                                android:layout_width="40dp"
                                android:layout_height="30dp"
                                android:clickable="true"
                                android:focusable="true"
                                android:foreground="?attr/selectableItemBackground"
                                android:background="@drawable/bg_blue3_rounded"
                                android:gravity="center">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="변경"
                                    android:textStyle="bold"
                                    android:textColor="@color/white"/>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="vertical"
                        android:layout_marginHorizontal="60dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="이름"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/user_Name"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:layout_marginTop="3dp"
                            android:background="@drawable/bg_edittext_rounded2"
                            android:textColor="@color/black"
                            android:textSize="18sp"
                            android:enabled="false"
                            android:paddingLeft="10dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="vertical"
                        android:layout_marginHorizontal="60dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="이메일"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            >
                            <EditText
                                android:id="@+id/user_Email"
                                android:layout_width="180dp"
                                android:layout_height="30dp"
                                android:background="@drawable/bg_edittext_rounded2"
                                android:textColor="@color/black"
                                android:textSize="18sp"
                                android:enabled="false"
                                android:paddingLeft="10dp"/>
                            <LinearLayout
                                android:id="@+id/user_Email_reset"
                                android:layout_marginLeft="8dp"
                                android:layout_width="40dp"
                                android:layout_height="30dp"
                                android:clickable="true"
                                android:focusable="true"
                                android:foreground="?attr/selectableItemBackground"
                                android:background="@drawable/bg_blue3_rounded"
                                android:gravity="center">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="변경"
                                    android:textStyle="bold"
                                    android:textColor="@color/white"/>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="vertical"
                        android:layout_marginHorizontal="60dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="전화번호"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            >
                            <EditText
                                android:id="@+id/user_Ph"
                                android:layout_width="180dp"
                                android:layout_height="30dp"
                                android:background="@drawable/bg_edittext_rounded2"
                                android:textColor="@color/black"
                                android:textSize="18sp"
                                android:enabled="false"
                                android:paddingLeft="10dp"/>
                            <LinearLayout
                                android:id="@+id/user_Ph_reset"
                                android:layout_marginLeft="8dp"
                                android:layout_width="40dp"
                                android:layout_height="30dp"
                                android:clickable="true"
                                android:focusable="true"
                                android:foreground="?attr/selectableItemBackground"
                                android:background="@drawable/bg_blue3_rounded"
                                android:gravity="center">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="변경"
                                    android:textStyle="bold"
                                    android:textColor="@color/white"/>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="vertical"
                        android:layout_marginHorizontal="60dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="부서"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/user_Department"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:layout_marginTop="3dp"
                            android:background="@drawable/bg_edittext_rounded2"
                            android:textColor="@color/black"
                            android:textSize="18sp"
                            android:enabled="false"
                            android:paddingLeft="10dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="vertical"
                        android:layout_marginHorizontal="60dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="생년월일"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/user_Bday"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:layout_marginTop="3dp"
                            android:background="@drawable/bg_edittext_rounded2"
                            android:textColor="@color/black"
                            android:textSize="18sp"
                            android:enabled="false"
                            android:paddingLeft="10dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="vertical"
                        android:layout_marginHorizontal="60dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="입사일"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/user_JoinDate"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:layout_marginTop="3dp"
                            android:background="@drawable/bg_edittext_rounded2"
                            android:textColor="@color/black"
                            android:textSize="18sp"
                            android:enabled="false"
                            android:paddingLeft="10dp"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
    <!-- 네비게이션 드로어 메뉴 -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:menu="@menu/drawer_menu" />
</androidx.drawerlayout.widget.DrawerLayout>
