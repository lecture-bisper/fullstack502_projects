<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!-- 전체 콘텐츠 영역 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <!--            상단 navbar-->
            <LinearLayout
                android:id="@+id/top_controls"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_gravity="top|start"
                android:orientation="horizontal"
                android:paddingHorizontal="10dp"
                android:background="@color/white"
                android:gravity="center_vertical">
                <!-- 메뉴버튼 -->
                <ImageButton
                    android:id="@+id/menu_btn"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/hamburger"/>

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="57dp"
                    android:layout_marginLeft="110dp"
                    android:src="@drawable/bq"
                    app:layout_anchor="@+id/top_controls"
                    app:layout_anchorGravity="center"
                    app:tint="@color/blue" />
            </LinearLayout>
            <!--메인 콘텐츠 영역-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/blue"
                android:orientation="vertical"
                android:gravity="center_horizontal">
                <!--                메인 콘텐츠 로그인 박스-->
                <LinearLayout
                    android:id="@+id/item_list_Box"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:background="@drawable/bg_white_rounded"
                    android:elevation="8dp"
                    android:clipToOutline="true"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="비품 목록 내역"
                        android:textSize="41sp"
                        android:textStyle="bold"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="5dp"
                        android:paddingLeft="20dp"
                        android:layout_marginBottom="10dp">

                        <EditText
                            android:id="@+id/itemSearch"
                            android:layout_width="310dp"
                            android:layout_height="50dp"
                            android:background="@drawable/bg_edittext_rounded"
                            android:gravity="center"
                            android:hint="비품명 또는 비품코드"
                            android:textSize="18sp"/>

                        <ImageView
                            android:id="@+id/itemSearchBtn"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_marginLeft="5dp"
                            android:src="@drawable/search"
                            app:tint="@color/blue2"/>
                    </LinearLayout>

                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scrollbars="horizontal"
                        android:layout_marginHorizontal="10dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginBottom="20dp">
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"

                                android:background="@drawable/bg_ediitext_rounded3">

                                <TextView
                                    android:layout_width="70dp"
                                    android:layout_height="wrap_content"
                                    android:paddingHorizontal="10dp"
                                    android:text="순번"
                                    android:textSize="23sp"
                                    android:gravity="center"
                                    android:textStyle="bold"/>
                                <View
                                    android:layout_width="1dp"
                                    android:layout_height="match_parent"
                                    android:background="@color/black"/>
                                <TextView
                                    android:layout_width="70dp"
                                    android:layout_height="wrap_content"
                                    android:paddingHorizontal="10dp"
                                    android:text="상세"
                                    android:textSize="23sp"
                                    android:gravity="center"
                                    android:textStyle="bold"/>
                                <View
                                    android:layout_width="1dp"
                                    android:layout_height="match_parent"
                                    android:background="@color/black"/>
                                <TextView
                                    android:id="@+id/item_name"
                                    android:layout_width="150dp"
                                    android:layout_height="wrap_content"
                                    android:paddingHorizontal="10dp"
                                    android:text="비품명"
                                    android:textSize="23sp"
                                    android:gravity="center"
                                    android:textStyle="bold"/>
                                <View
                                    android:layout_width="1dp"
                                    android:layout_height="match_parent"
                                    android:background="@color/black"/>
                                <TextView
                                    android:id="@+id/item_code"
                                    android:layout_width="150dp"
                                    android:layout_height="wrap_content"
                                    android:paddingHorizontal="10dp"
                                    android:text="비품코드"
                                    android:textSize="23sp"
                                    android:gravity="center"
                                    android:textStyle="bold"/>
                                <View
                                    android:layout_width="1dp"
                                    android:layout_height="match_parent"
                                    android:background="@color/black"/>
                                <TextView
                                    android:id="@+id/item_manufacturer"
                                    android:layout_width="100dp"
                                    android:layout_height="wrap_content"
                                    android:paddingHorizontal="10dp"
                                    android:text="제조사"
                                    android:textSize="23sp"
                                    android:gravity="center"
                                    android:textStyle="bold"/>
                                <View
                                    android:layout_width="1dp"
                                    android:layout_height="match_parent"
                                    android:background="@color/black"/>
                                <TextView
                                    android:id="@+id/item_categoryId"
                                    android:layout_width="190dp"
                                    android:layout_height="wrap_content"
                                    android:paddingHorizontal="10dp"
                                    android:text="종류"
                                    android:textSize="23sp"
                                    android:gravity="center"
                                    android:textStyle="bold"/>
                                <View
                                    android:layout_width="1dp"
                                    android:layout_height="match_parent"
                                    android:background="@color/black"/>
                                <TextView
                                    android:id="@+id/item_price"
                                    android:layout_width="150dp"
                                    android:layout_height="wrap_content"
                                    android:paddingHorizontal="10dp"
                                    android:text="가격"
                                    android:textSize="23sp"
                                    android:gravity="center"
                                    android:textStyle="bold"/>
                            </LinearLayout>

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/itemRecyclerView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:scrollbars="vertical" />
                        </LinearLayout>
                    </HorizontalScrollView>


                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
    <!-- 네비게이션 드로어 메뉴 -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:menu="@menu/drawer_menu" />
</androidx.drawerlayout.widget.DrawerLayout>
